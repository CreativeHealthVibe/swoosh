<!-- 404 Not Found Page -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow border-0 rounded-3">
        <div class="card-body p-5 text-center">
          <div class="mb-4">
            <div class="display-1 text-warning">
              <i class="fas fa-search"></i>
            </div>
            <h1 class="mt-3">Page Not Found</h1>
            <p class="lead text-muted">404 Error</p>
          </div>
          
          <div class="alert alert-warning">
            <p class="mb-0"><%= message || 'The page you are looking for does not exist or has been moved.' %></p>
          </div>
          
          <div class="mt-4">
            <p>Please check the URL or try navigating back to our homepage.</p>
            
            <div class="d-grid gap-3">
              <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-2"></i> Go to Homepage
              </a>
              <button class="btn btn-outline-secondary" onclick="window.history.back()">
                <i class="fas fa-arrow-left me-2"></i> Go Back
              </button>
            </div>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-4 text-muted">
        <small>If you believe this is an error, please contact an administrator.</small>
      </div>
    </div>
  </div>
</div>
