<!-- 500 Server Error Page -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow border-0 rounded-3">
        <div class="card-body p-5 text-center">
          <div class="mb-4">
            <div class="display-1 text-danger">
              <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1 class="mt-3">Server Error</h1>
            <p class="lead text-muted">500 Internal Server Error</p>
          </div>
          
          <div class="alert alert-danger">
            <p class="mb-0"><%= message || 'An unexpected error occurred on our server. Our team has been notified.' %></p>
          </div>
          
          <div class="mt-4">
            <p>Please try again later or contact support if the problem persists.</p>
            
            <div class="d-grid gap-3">
              <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-2"></i> Go to Homepage
              </a>
              <button class="btn btn-outline-secondary" onclick="window.location.reload()">
                <i class="fas fa-redo me-2"></i> Try Again
              </button>
            </div>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-4 text-muted">
        <small>Error ID: <%= Date.now().toString(36).toUpperCase() %></small>
      </div>
    </div>
  </div>
</div>
