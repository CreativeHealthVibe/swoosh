<!-- User Profile Page -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow border-0">
        <div class="card-body p-4">
          <div class="d-flex align-items-center mb-4">
            <div>
              <h2 class="fw-bold mb-0">Your Profile</h2>
              <p class="text-muted mb-0">Manage your account and permissions</p>
            </div>
            <div class="ms-auto">
              <% if (user.isAdmin) { %>
                <a href="/admin/dashboard" class="btn btn-primary">
                  <i class="fas fa-tachometer-alt me-2"></i> Admin Dashboard
                </a>
              <% } %>
              <a href="/auth/logout" class="btn btn-outline-danger ms-2">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
              </a>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-4 mb-4">
              <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                  <img 
                    src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png?size=256` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" 
                    alt="<%= user.username %>'s avatar" 
                    class="rounded-circle img-thumbnail mb-3"
                    style="width: 128px; height: 128px; object-fit: cover;"
                  >
                  <h4><%= user.username %><span class="text-secondary">#<%= user.discriminator || '0000' %></span></h4>
                  <p class="text-muted mb-2">Discord ID: <%= user.id %></p>
                  
                  <% if (user.isAdmin) { %>
                    <span class="badge bg-primary mb-3">Administrator</span>
                  <% } %>
                  
                  <div class="d-grid mt-3">
                    <a href="https://discord.com/users/<%= user.id %>" target="_blank" class="btn btn-outline-primary">
                      <i class="fab fa-discord me-2"></i> View Discord Profile
                    </a>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col-md-8 mb-4">
              <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-light py-3">
                  <h5 class="mb-0">Account Information</h5>
                </div>
                <div class="card-body p-4">
                  <div class="mb-4">
                    <h6>Connected Account</h6>
                    <p>Your account is connected to Discord with the following details:</p>
                    <ul class="list-group">
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        Username
                        <span class="fw-bold"><%= user.username %>#<%= user.discriminator || '0000' %></span>
                      </li>
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        User ID
                        <span class="fw-bold"><%= user.id %></span>
                      </li>
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        Email
                        <span class="fw-bold"><%= user.email || 'Not provided' %></span>
                      </li>
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        Account Type
                        <span class="badge bg-<%= user.isAdmin ? 'primary' : 'secondary' %>">
                          <%= user.isAdmin ? 'Administrator' : 'Standard User' %>
                        </span>
                      </li>
                    </ul>
                  </div>
                  
                  <div>
                    <h6>Connected Servers</h6>
                    <p class="text-muted">Servers where you and SWOOSH Bot are both members:</p>
                    
                    <% if (user.guilds && user.guilds.filter(g => g.bot_in_guild).length > 0) { %>
                      <div class="list-group">
                        <% user.guilds.filter(g => g.bot_in_guild).slice(0, 5).forEach(guild => { %>
                          <div class="list-group-item list-group-item-action d-flex align-items-center">
                            <% if (guild.icon) { %>
                              <img 
                                src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=64" 
                                alt="<%= guild.name %>" 
                                class="rounded me-3"
                                style="width: 32px; height: 32px; object-fit: cover;"
                              >
                            <% } else { %>
                              <div class="bg-secondary rounded text-white d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                                <i class="fas fa-server"></i>
                              </div>
                            <% } %>
                            <div>
                              <h6 class="mb-0"><%= guild.name %></h6>
                              <small class="text-muted">ID: <%= guild.id %></small>
                            </div>
                          </div>
                        <% }) %>
                        
                        <% if (user.guilds.filter(g => g.bot_in_guild).length > 5) { %>
                          <div class="list-group-item text-center text-muted">
                            And <%= user.guilds.filter(g => g.bot_in_guild).length - 5 %> more servers...
                          </div>
                        <% } %>
                      </div>
                    <% } else { %>
                      <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> No servers found where you and SWOOSH Bot are both members.
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <% if (user.isAdmin) { %>
            <div class="alert alert-primary d-flex align-items-center" role="alert">
              <i class="fas fa-shield-alt fa-2x me-3"></i>
              <div>
                <h5 class="alert-heading">Administrator Access</h5>
                <p class="mb-0">You have administrator access to the SWOOSH Bot dashboard. You can manage bot settings, view statistics, and more.</p>
              </div>
              
              <a href="/admin/dashboard" class="btn btn-primary ms-auto">
                <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
