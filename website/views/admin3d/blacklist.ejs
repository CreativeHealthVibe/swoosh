<div class="admin3d-blacklist">
  <div class="dashboard-header">
    <h1 class="section-title">Blacklist Management</h1>
  </div>
  
  <p class="section-description">
    Manage blacklisted users across your Discord servers. Blacklisted users cannot use bot commands and can be automatically reported when they send messages.
  </p>
  
  <!-- Add to Blacklist -->
  <div class="admin3d-card glow-border" data-premium="true">
    <div class="admin3d-card-header">
      <div>
        <div class="admin3d-card-icon glow-bg">
          <i class="fas fa-user-slash"></i>
        </div>
      </div>
      <h3 class="admin3d-card-title glow-text">Add User to Blacklist</h3>
    </div>
    <div class="admin3d-card-content">
      <form action="/admin3d/blacklist/add" method="POST" data-ajax="true" data-reset="true">
        <div class="admin3d-form-group">
          <label class="admin3d-form-label" for="userId">User ID</label>
          <input class="admin3d-form-input" type="text" id="userId" name="userId" placeholder="Discord User ID" required>
          <span class="admin3d-form-hint">The Discord user ID of the user to blacklist</span>
        </div>
        
        <div class="admin3d-form-row">
          <div class="admin3d-form-group">
            <label class="admin3d-form-label" for="duration">Duration</label>
            <select class="admin3d-form-select" id="duration" name="duration">
              <option value="1h">1 Hour</option>
              <option value="6h">6 Hours</option>
              <option value="12h">12 Hours</option>
              <option value="1d">1 Day</option>
              <option value="3d">3 Days</option>
              <option value="7d">1 Week</option>
              <option value="14d">2 Weeks</option>
              <option value="30d">30 Days</option>
              <option value="permanent" selected>Permanent</option>
            </select>
          </div>
          
          <div class="admin3d-form-group">
            <label class="admin3d-form-label" for="level">Restriction Level</label>
            <select class="admin3d-form-select" id="level" name="level">
              <option value="commands" selected>Commands Only</option>
              <option value="message_filter">Message Filter</option>
              <option value="all">Complete Restriction</option>
            </select>
            <span class="admin3d-form-hint">Determines what functionality is restricted</span>
          </div>
        </div>
        
        <div class="admin3d-form-group">
          <label class="admin3d-form-label" for="reason">Reason</label>
          <textarea class="admin3d-form-textarea" id="reason" name="reason" placeholder="Reason for blacklisting" required rows="3"></textarea>
        </div>
        
        <div class="admin3d-form-actions">
          <button type="submit" class="admin3d-btn admin3d-btn-danger">
            <i class="fas fa-ban"></i> Add to Blacklist
          </button>
        </div>
      </form>
    </div>
  </div>
  
  <!-- Current Blacklist -->
  <h2 class="section-subtitle">Current Blacklist</h2>
  
  <div class="blacklist-filters">
    <div class="filter-group">
      <label for="blacklist-filter">Filter:</label>
      <select id="blacklist-filter" class="admin3d-form-select">
        <option value="all">All Entries</option>
        <option value="permanent">Permanent Only</option>
        <option value="temporary">Temporary Only</option>
        <option value="expired">Expired</option>
      </select>
    </div>
    
    <div class="filter-group">
      <label for="blacklist-search">Search:</label>
      <input type="text" id="blacklist-search" class="admin3d-form-input" placeholder="User ID or username">
    </div>
  </div>
  
  <div class="blacklist-table-wrapper">
    <table class="blacklist-table">
      <thead>
        <tr>
          <th>User</th>
          <th>Added By</th>
          <th>Reason</th>
          <th>Duration</th>
          <th>Restriction</th>
          <th>Expires</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="blacklist-table-body">
        <!-- Sample entries, will be replaced by real data -->
        <tr>
          <td>
            <div class="user-info">
              <div class="user-avatar">
                <i class="fas fa-user"></i>
              </div>
              <div class="user-details">
                <div class="user-name">ExampleUser#1234</div>
                <div class="user-id">123456789012345678</div>
              </div>
            </div>
          </td>
          <td>Admin User</td>
          <td>Spamming commands</td>
          <td>Permanent</td>
          <td>Commands Only</td>
          <td>Never</td>
          <td>
            <div class="table-actions">
              <button class="admin3d-btn admin3d-btn-secondary btn-sm" data-action="edit" data-id="123456789012345678">
                <i class="fas fa-edit"></i>
              </button>
              <button class="admin3d-btn admin3d-btn-danger btn-sm" data-action="remove" data-id="123456789012345678">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="user-info">
              <div class="user-avatar">
                <i class="fas fa-user"></i>
              </div>
              <div class="user-details">
                <div class="user-name">TestUser#5678</div>
                <div class="user-id">987654321098765432</div>
              </div>
            </div>
          </td>
          <td>Mod User</td>
          <td>Violation of server rules</td>
          <td>7 Days</td>
          <td>Complete Restriction</td>
          <td>3 days left</td>
          <td>
            <div class="table-actions">
              <button class="admin3d-btn admin3d-btn-secondary btn-sm" data-action="edit" data-id="987654321098765432">
                <i class="fas fa-edit"></i>
              </button>
              <button class="admin3d-btn admin3d-btn-danger btn-sm" data-action="remove" data-id="987654321098765432">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <!-- Blacklist History -->
  <h2 class="section-subtitle">Blacklist History</h2>
  <div class="admin3d-card">
    <div class="admin3d-card-header">
      <h3 class="admin3d-card-title">Recent Blacklist Actions</h3>
    </div>
    <div class="admin3d-card-content">
      <div class="blacklist-history">
        <div class="history-item">
          <div class="history-icon removed">
            <i class="fas fa-user-check"></i>
          </div>
          <div class="history-content">
            <div class="history-title">User Removed from Blacklist</div>
            <div class="history-details">
              <span class="history-user">DevUser#4321</span>
              <span class="history-admin">by Admin User</span>
              <span class="history-time">Today at 10:30 AM</span>
            </div>
            <div class="history-reason">Reason: Time served, good behavior</div>
          </div>
        </div>
        
        <div class="history-item">
          <div class="history-icon added">
            <i class="fas fa-user-slash"></i>
          </div>
          <div class="history-content">
            <div class="history-title">User Added to Blacklist</div>
            <div class="history-details">
              <span class="history-user">TestUser#5678</span>
              <span class="history-admin">by Mod User</span>
              <span class="history-time">Yesterday at 3:15 PM</span>
            </div>
            <div class="history-reason">Reason: Violation of server rules</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit Blacklist Modal -->
<div class="modal-overlay" id="edit-blacklist-modal">
  <div class="modal-container">
    <div class="modal-header">
      <h3 class="modal-title">Edit Blacklist Entry</h3>
      <button class="modal-close"><i class="fas fa-times"></i></button>
    </div>
    <div class="modal-body">
      <form id="edit-blacklist-form">
        <input type="hidden" id="edit-user-id" name="userId">
        
        <div class="admin3d-form-group">
          <label class="admin3d-form-label" for="edit-duration">Duration</label>
          <select class="admin3d-form-select" id="edit-duration" name="duration">
            <option value="1h">1 Hour</option>
            <option value="6h">6 Hours</option>
            <option value="12h">12 Hours</option>
            <option value="1d">1 Day</option>
            <option value="3d">3 Days</option>
            <option value="7d">1 Week</option>
            <option value="14d">2 Weeks</option>
            <option value="30d">30 Days</option>
            <option value="permanent">Permanent</option>
          </select>
        </div>
        
        <div class="admin3d-form-group">
          <label class="admin3d-form-label" for="edit-level">Restriction Level</label>
          <select class="admin3d-form-select" id="edit-level" name="level">
            <option value="commands">Commands Only</option>
            <option value="message_filter">Message Filter</option>
            <option value="all">Complete Restriction</option>
          </select>
        </div>
        
        <div class="admin3d-form-group">
          <label class="admin3d-form-label" for="edit-reason">Reason</label>
          <textarea class="admin3d-form-textarea" id="edit-reason" name="reason" required rows="3"></textarea>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button class="admin3d-btn admin3d-btn-secondary" data-action="cancel">Cancel</button>
      <button class="admin3d-btn admin3d-btn-primary" data-action="save">Save Changes</button>
    </div>
  </div>
</div>

<!-- Confirmation Modal -->
<div class="modal-overlay" id="confirm-modal">
  <div class="modal-container">
    <div class="modal-header">
      <h3 class="modal-title">Confirm Action</h3>
      <button class="modal-close"><i class="fas fa-times"></i></button>
    </div>
    <div class="modal-body">
      <p id="confirm-message">Are you sure you want to perform this action?</p>
    </div>
    <div class="modal-footer">
      <button class="admin3d-btn admin3d-btn-secondary" data-action="cancel">Cancel</button>
      <button class="admin3d-btn admin3d-btn-danger" data-action="confirm">Confirm</button>
    </div>
  </div>
</div>

<style>
  /* Blacklist specific styles */
  .blacklist-filters {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }
  
  .filter-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .blacklist-table-wrapper {
    overflow-x: auto;
    margin-bottom: 2rem;
    background: rgba(19, 16, 58, 0.4);
    border-radius: 16px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(49, 41, 95, 0.3);
  }
  
  .blacklist-table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .blacklist-table th,
  .blacklist-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(49, 41, 95, 0.3);
  }
  
  .blacklist-table th {
    font-weight: 600;
    color: var(--text);
    background-color: rgba(32, 26, 69, 0.5);
  }
  
  .blacklist-table tbody tr {
    transition: all var(--transition-fast);
  }
  
  .blacklist-table tbody tr:hover {
    background-color: rgba(49, 41, 95, 0.2);
  }
  
  .blacklist-table tbody tr:last-child td {
    border-bottom: none;
  }
  
  .user-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .user-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: var(--background-lighter);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
  }
  
  .user-details {
    display: flex;
    flex-direction: column;
  }
  
  .user-name {
    font-weight: 600;
  }
  
  .user-id {
    font-size: 0.75rem;
    color: var(--text-muted);
  }
  
  .table-actions {
    display: flex;
    gap: 0.5rem;
  }
  
  .btn-sm {
    padding: 0.5rem;
    min-width: 36px;
    min-height: 36px;
  }
  
  /* History styles */
  .blacklist-history {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .history-item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background-color: rgba(49, 41, 95, 0.2);
    border-radius: 10px;
  }
  
  .history-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .history-icon.added {
    background-color: rgba(255, 61, 113, 0.2);
    color: var(--danger);
  }
  
  .history-icon.removed {
    background-color: rgba(0, 230, 118, 0.2);
    color: var(--success);
  }
  
  .history-content {
    flex: 1;
  }
  
  .history-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .history-details {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }
  
  .history-reason {
    font-size: 0.9375rem;
  }
  
  /* Modal styles */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(10, 7, 32, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: var(--z-modal);
    backdrop-filter: blur(5px);
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-normal);
  }
  
  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  
  .modal-container {
    width: 100%;
    max-width: 500px;
    background-color: var(--background-light);
    border-radius: 16px;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    border: 1px solid var(--border);
    transform: translateY(20px);
    transition: transform var(--transition-normal);
    overflow: hidden;
  }
  
  .modal-overlay.active .modal-container {
    transform: translateY(0);
  }
  
  .modal-header {
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border);
  }
  
  .modal-title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .modal-close {
    background: none;
    border: none;
    color: var(--text-muted);
    font-size: 1.25rem;
    cursor: pointer;
    transition: color var(--transition-fast);
  }
  
  .modal-close:hover {
    color: var(--text);
  }
  
  .modal-body {
    padding: 1.5rem;
  }
  
  .modal-footer {
    padding: 1.5rem;
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    border-top: 1px solid var(--border);
  }
  
  /* Responsive styles */
  @media (max-width: 768px) {
    .blacklist-filters {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .filter-group {
      width: 100%;
    }
    
    .blacklist-table {
      display: block;
    }
    
    .blacklist-table thead {
      display: none;
    }
    
    .blacklist-table tbody {
      display: block;
    }
    
    .blacklist-table tr {
      display: block;
      padding: 1rem;
      margin-bottom: 1rem;
      border: 1px solid var(--border);
      border-radius: 10px;
    }
    
    .blacklist-table td {
      display: block;
      border: none;
      padding: 0.5rem 0;
    }
    
    .blacklist-table td:before {
      content: attr(data-label);
      font-weight: 600;
      display: inline-block;
      width: 120px;
    }
  }
</style>

<!-- Include the notification system and blacklist script -->
<script src="/js/admin3d-notifications.js"></script>
<script src="/js/admin3d-blacklist.js"></script>