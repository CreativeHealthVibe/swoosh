<template id="activeFilterTemplate">
  <div class="admin3d-list-item">
    <div class="admin3d-list-item-header">
      <div class="admin3d-list-item-title">{{filterName}}</div>
      <div class="admin3d-list-item-actions">
        <button class="admin3d-btn admin3d-btn-icon admin3d-btn-sm edit-filter" data-id="{{filterId}}">
          <i class="fas fa-edit"></i>
        </button>
        <button class="admin3d-btn admin3d-btn-icon admin3d-btn-sm admin3d-btn-danger delete-filter" data-id="{{filterId}}">
