<%# 
  SWOOSH Bot 3D Admin Dashboard
  Premium Edition
  
  Moderation management page with ban, warning, and automod tools
%>

<div class="admin3d-moderation">
  <!-- Big, visible header -->
  <div class="moderation-header">
    <h1 class="moderation-title">Moderation Command Center</h1>
    <p class="moderation-subtitle">Advanced tools for server management</p>
  </div>
  
  <!-- Server selector -->
  <div class="mod-server-selector">
    <span>Server:</span>
    <div class="server-selector-wrapper">
      <select id="serverSelect">
        <option value="">Select a server</option>
        <% if (servers && servers.length > 0) { %>
          <% servers.forEach(server => { %>
            <option value="<%= server.id %>"><%= server.name %></option>
          <% }); %>
        <% } else { %>
          <option disabled>No servers available</option>
        <% } %>
      </select>
    </div>
  </div>
  
  <!-- Stats Cards - Exact match to reference -->
  <div class="mod-stats-cards">
    <div class="mod-stat-card">
      <div class="mod-stat-icon ban-icon">
        <i class="fas fa-gavel"></i>
      </div>
      <div class="mod-stat-content">
        <h3 id="totalBans">0</h3>
        <span>Active Bans</span>
      </div>
    </div>
    
    <div class="mod-stat-card">
      <div class="mod-stat-icon warning-icon">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <div class="mod-stat-content">
        <h3 id="totalWarnings">0</h3>
        <span>Active Warnings</span>
      </div>
    </div>
    
    <div class="mod-stat-card">
      <div class="mod-stat-icon shield-icon">
        <i class="fas fa-shield-alt"></i>
      </div>
      <div class="mod-stat-content">
        <h3 id="automodActions">0</h3>
        <span>AutoMod Actions</span>
      </div>
    </div>
    
    <!-- New Stats Card: Member Count -->
    <div class="mod-stat-card">
      <div class="mod-stat-icon member-icon">
        <i class="fas fa-users"></i>
      </div>
      <div class="mod-stat-content">
        <h3 id="memberCount">0</h3>
        <span>Total Members</span>
      </div>
    </div>
  </div>
  
  <!-- Tab nav buttons - Exact match to reference -->
  <div class="mod-tab-navigation">
    <button class="mod-nav-btn active" data-tab="ban-management">
      <i class="fas fa-gavel"></i> Ban Management
    </button>
    <button class="mod-nav-btn" data-tab="warning-system">
      <i class="fas fa-exclamation-triangle"></i> Warning System
    </button>
    <button class="mod-nav-btn" data-tab="auto-moderation">
      <i class="fas fa-shield-alt"></i> Auto-Moderation
    </button>
    <!-- New Tab Button: Advanced Filters -->
    <button class="mod-nav-btn" data-tab="advanced-filters">
      <i class="fas fa-filter"></i> Advanced Filters
    </button>
  </div>
  
  <!-- 3D Visualization Container -->
  <div id="moderation-three-container" class="moderation-three-container"></div>
  
  <!-- Content Container -->
  <div class="mod-content-container" id="moderation-tabs">
    
    <!-- Fix for form interaction issues -->
    <style>
      /* Fix input interaction issues */
      .admin3d-form-input,
      .admin3d-form-textarea,
      .admin3d-form-select,
      .admin3d-btn {
        position: relative;
        z-index: 100 !important;
        pointer-events: auto !important;
      }
      
      /* Make sure forms are above the THREE.js canvas */
      #moderation-tabs .tab-content {
        position: relative;
        z-index: 50;
      }
      
      /* Ensure inputs can be interacted with */
      .admin3d-form-group {
        position: relative;
        z-index: 100;
      }
      
      /* Ensure THREE.js doesn't block */
      #three-container {
        pointer-events: none !important;
        z-index: -1 !important;
      }
    </style>
    
    <!-- Tab Content -->
    <div class="tab-content-container">
      <!-- Ban Management Tab -->
      <div id="ban-management" class="tab-content active">
        <div class="mod-section mod-ban-section">
          <!-- Left section: Ban User -->
          <div class="mod-ban-user">
            <div class="mod-section-header">
              <div class="mod-section-icon">
                <i class="fas fa-user-slash"></i>
              </div>
              <h3>Ban User</h3>
              <div class="mod-premium-badge">
                <span>Premium</span>
              </div>
            </div>
            <div class="mod-section-content">
              <p class="mod-desc">Ban a user from your server with customizable options.</p>
              
              <form action="/admin3d/moderation/ban-user" method="POST" id="banUserForm" data-ajax="true" data-reset="true">
                <input type="hidden" id="banServerId" name="serverId" value="">
                
                <div class="form-field">
                  <label for="userId">User ID or @Mention</label>
                  <input type="text" id="userId" name="userId" placeholder="Enter user ID or @mention" required>
                </div>
                
                <div class="form-field">
                  <label for="banReason">Reason</label>
                  <textarea id="banReason" name="banReason" placeholder="Explain the reason for this ban..." required rows="3"></textarea>
                </div>
                
                <div class="form-row">
                  <div class="form-field">
                    <label for="banDuration">Duration</label>
                    <select id="banDuration" name="banDuration">
                      <option value="permanent">Permanent</option>
                      <option value="1d">1 Day</option>
                      <option value="3d">3 Days</option>
                      <option value="7d">1 Week</option>
                      <option value="14d">2 Weeks</option>
                      <option value="30d">1 Month</option>
                      <option value="custom">Custom...</option>
                    </select>
                  </div>
                </div>
                
                <!-- Custom Duration Input (hidden by default) -->
                <div id="customDurationGroup" class="form-field" style="display: none;">
                  <label for="customDuration">Custom Duration</label>
                  <div class="custom-duration-inputs">
                    <input type="number" id="customDuration" name="customDuration" min="1" value="1">
                    <select id="customDurationUnit" name="customDurationUnit">
                      <option value="h">Hours</option>
                      <option value="d" selected>Days</option>
                      <option value="w">Weeks</option>
                      <option value="m">Months</option>
                    </select>
                  </div>
                </div>
                
                <div class="form-options">
                  <div class="form-check">
                    <input type="checkbox" id="deleteMessages" name="deleteMessages" value="true">
                    <label for="deleteMessages">Delete recent messages</label>
                  </div>
                  
                  <div class="form-check">
                    <input type="checkbox" id="addToBlacklist" name="addToBlacklist" value="true">
                    <label for="addToBlacklist">Add to blacklist</label>
                  </div>
                </div>
                
                <div class="form-actions">
                  <button type="submit" class="mod-btn danger-btn" id="banUserBtn">
                    <i class="fas fa-gavel"></i> Ban User
                  </button>
                </div>
              </form>
            </div>
          </div>
          
          <!-- Right section: Current Bans -->
          <div class="mod-current-bans">
            <div class="mod-section-header">
              <div class="mod-section-icon list-icon">
                <i class="fas fa-list"></i>
              </div>
              <h3>Current Bans</h3>
              <div class="mod-refresh-btn" id="refreshBans">
                <i class="fas fa-sync-alt"></i>
              </div>
            </div>
            <div class="mod-section-content">
              <!-- Ban List Search -->
              <div class="admin3d-search-filters">
                <div class="admin3d-search-box">
                  <i class="fas fa-search"></i>
                  <input type="text" id="banSearchInput" placeholder="Search bans...">
                </div>
              </div>
              
              <!-- Ban List Table -->
              <div class="admin3d-table-wrapper">
                <table class="admin3d-table">
                  <thead>
                    <tr>
                      <th>User</th>
                      <th>Reason</th>
                      <th>Date</th>
                      <th>Duration</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="banListBody">
                    <tr class="empty-state">
                      <td colspan="5">
                        <div class="empty-state-message">
                          <i class="fas fa-info-circle"></i>
                          <p>Select a server to view ban list</p>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Warning System Tab -->
      <div id="warning-system" class="tab-content">
        <div class="admin3d-grid">
          <!-- Issue Warning Form -->
          <div class="admin3d-card" data-premium="true">
            <div class="admin3d-card-header">
              <div>
                <div class="admin3d-card-icon">
                  <i class="fas fa-exclamation-circle"></i>
                </div>
              </div>
              <h3 class="admin3d-card-title">Issue Warning</h3>
            </div>
            <div class="admin3d-card-content">
              <p class="admin3d-card-description">
                Issue a warning to a user with customizable severity levels.
              </p>
              
              <form action="/admin3d/moderation/warn-user" method="POST" id="warnUserForm" data-ajax="true" data-reset="true">
                <input type="hidden" id="warnServerId" name="serverId" value="">
                
                <div class="admin3d-form-group">
                  <label class="admin3d-form-label" for="warnUserId">User ID or @Mention</label>
                  <input class="admin3d-form-input" type="text" id="warnUserId" name="warnUserId" placeholder="Enter user ID or @mention" required>
                </div>
                
                <div class="admin3d-form-group">
                  <label class="admin3d-form-label" for="warnReason">Reason</label>
                  <textarea class="admin3d-form-textarea" id="warnReason" name="warnReason" placeholder="Explain the warning reason..." required rows="3"></textarea>
                </div>
                
                <div class="admin3d-form-row">
                  <div class="admin3d-form-group">
                    <label class="admin3d-form-label" for="warningSeverity">Severity</label>
                    <select class="admin3d-form-select" id="warningSeverity" name="warningSeverity">
                      <option value="low">Low</option>
                      <option value="medium" selected>Medium</option>
                      <option value="high">High</option>
                      <option value="critical">Critical</option>
                    </select>
                  </div>
                  
                  <div class="admin3d-form-group">
                    <label class="admin3d-form-label" for="warningDuration">Expiration</label>
                    <select class="admin3d-form-select" id="warningDuration" name="warningDuration">
                      <option value="permanent">Never</option>
                      <option value="7d">7 Days</option>
                      <option value="30d" selected>30 Days</option>
                      <option value="90d">90 Days</option>
                      <option value="180d">6 Months</option>
                    </select>
                  </div>
                </div>
                
                <div class="admin3d-form-options">
                  <div class="admin3d-form-check">
                    <input type="checkbox" id="notifyUser" name="notifyUser" value="true" checked>
                    <label for="notifyUser">Notify user via DM</label>
                  </div>
                </div>
                
                <div class="admin3d-form-actions">
                  <button type="submit" class="admin3d-btn admin3d-btn-warning" id="warnUserBtn">
                    <i class="fas fa-exclamation-triangle"></i> Issue Warning
                  </button>
                </div>
              </form>
            </div>
          </div>
          
          <!-- Warning List -->
          <div class="admin3d-card">
            <div class="admin3d-card-header">
              <div>
                <div class="admin3d-card-icon">
                  <i class="fas fa-history"></i>
                </div>
              </div>
              <h3 class="admin3d-card-title">Warning History</h3>
              <div class="admin3d-card-actions">
                <button class="admin3d-btn admin3d-btn-icon" id="refreshWarnings" title="Refresh warning list">
                  <i class="fas fa-sync-alt"></i>
                </button>
              </div>
            </div>
            <div class="admin3d-card-content">
              <div class="admin3d-search-filters">
                <div class="admin3d-search-box">
                  <i class="fas fa-search"></i>
                  <input type="text" class="admin3d-form-input" id="warningSearchInput" placeholder="Search warnings...">
                </div>
                <div class="admin3d-filter-select">
                  <select class="admin3d-form-select" id="warningFilterSelect">
                    <option value="all">All Warnings</option>
                    <option value="active">Active</option>
                    <option value="expired">Expired</option>
                    <option value="high">High Severity</option>
                  </select>
                </div>
              </div>
              
              <!-- Warning List Table -->
              <div class="admin3d-table-wrapper">
                <table class="admin3d-table">
                  <thead>
                    <tr>
                      <th>User</th>
                      <th>Reason</th>
                      <th>Severity</th>
                      <th>Date</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="warningListBody">
                    <tr class="empty-state">
                      <td colspan="6">
                        <div class="empty-state-message">
                          <i class="fas fa-info-circle"></i>
                          <p>Select a server to view warnings</p>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Auto-Moderation Tab -->
      <div id="auto-moderation" class="tab-content">
        <div class="admin3d-grid">
          <!-- Auto-Mod Settings -->
          <div class="admin3d-card" data-premium="true">
            <div class="admin3d-card-header">
              <div>
                <div class="admin3d-card-icon">
                  <i class="fas fa-cogs"></i>
                </div>
              </div>
              <h3 class="admin3d-card-title">Auto-Moderation Settings</h3>
            </div>
            <div class="admin3d-card-content">
              <p class="admin3d-card-description">
                Configure advanced auto-moderation features for your server.
              </p>
              
              <form action="/admin3d/moderation/automod-settings" method="POST" id="automodSettingsForm" data-ajax="true">
                <input type="hidden" id="automodServerId" name="serverId" value="">
                
                <!-- Content Filtering -->
                <div class="settings-section">
                  <h4 class="settings-section-title">
                    <i class="fas fa-filter"></i> Content Filtering
                  </h4>
                  
                  <div class="admin3d-toggle-group">
                    <div class="admin3d-toggle-item">
                      <label class="admin3d-toggle" for="profanityFilter">
                        <input type="checkbox" id="profanityFilter" name="profanityFilter" value="true">
                        <span class="admin3d-toggle-slider"></span>
                      </label>
                      <div class="admin3d-toggle-label">
                        <span>Profanity Filter</span>
                        <small>Filter messages containing profanity</small>
                      </div>
                    </div>
                    
                    <div class="admin3d-toggle-item">
                      <label class="admin3d-toggle" for="linkFilter">
                        <input type="checkbox" id="linkFilter" name="linkFilter" value="true">
                        <span class="admin3d-toggle-slider"></span>
                      </label>
                      <div class="admin3d-toggle-label">
                        <span>Link Filter</span>
                        <small>Filter or verify posted links</small>
                      </div>
                    </div>
                    
                    <div class="admin3d-toggle-item">
                      <label class="admin3d-toggle" for="inviteBlocker">
                        <input type="checkbox" id="inviteBlocker" name="inviteBlocker" value="true">
                        <span class="admin3d-toggle-slider"></span>
                      </label>
                      <div class="admin3d-toggle-label">
                        <span>Discord Invite Blocker</span>
                        <small>Block Discord invite links</small>
                      </div>
                    </div>
                  </div>
                  
                  <div class="admin3d-form-group">
                    <label class="admin3d-form-label" for="profanityFilterLevel">Profanity Filter Strictness</label>
                    <select class="admin3d-form-select" id="profanityFilterLevel" name="profanityFilterLevel">
                      <option value="low">Low - Only extreme profanity</option>
                      <option value="medium" selected>Medium - Balanced filtering</option>
                      <option value="high">High - Strict filtering</option>
                      <option value="custom">Custom - Word list</option>
                    </select>
                  </div>
                  
                  <!-- Custom Word List (hidden by default) -->
                  <div id="customWordListGroup" class="admin3d-form-group" style="display: none;">
                    <label class="admin3d-form-label" for="customWordList">Custom Word List</label>
                    <textarea class="admin3d-form-textarea" id="customWordList" name="customWordList" placeholder="Enter words to filter, one per line..." rows="4"></textarea>
                    <div class="admin3d-form-note">
                      <i class="fas fa-info-circle"></i>
                      <span>These words will be filtered in addition to the default list</span>
                    </div>
                  </div>
                </div>
                
                <!-- Anti-Spam Protection -->
                <div class="settings-section">
                  <h4 class="settings-section-title">
                    <i class="fas fa-shield-alt"></i> Anti-Spam Protection
                  </h4>
                  
                  <div class="admin3d-toggle-group">
                    <div class="admin3d-toggle-item">
                      <label class="admin3d-toggle" for="antiSpam">
                        <input type="checkbox" id="antiSpam" name="antiSpam" value="true">
                        <span class="admin3d-toggle-slider"></span>
                      </label>
                      <div class="admin3d-toggle-label">
                        <span>Message Spam Protection</span>
                        <small>Detect and prevent message spam</small>
                      </div>
                    </div>
                    
                    <div class="admin3d-toggle-item">
                      <label class="admin3d-toggle" for="antiMention">
                        <input type="checkbox" id="antiMention" name="antiMention" value="true">
                        <span class="admin3d-toggle-slider"></span>
                      </label>
                      <div class="admin3d-toggle-label">
                        <span>Mention Spam Protection</span>
                        <small>Prevent mass mention spam</small>
                      </div>
                    </div>
                    
                    <div class="admin3d-toggle-item">
                      <label class="admin3d-toggle" for="antiRaid">
                        <input type="checkbox" id="antiRaid" name="antiRaid" value="true">
                        <span class="admin3d-toggle-slider"></span>
                      </label>
                      <div class="admin3d-toggle-label">
                        <span>Anti-Raid Protection</span>
                        <small>Detect and prevent server raids</small>
                      </div>
                    </div>
                  </div>
                  
                  <div class="admin3d-form-row">
                    <div class="admin3d-form-group half-width">
                      <label class="admin3d-form-label" for="messageThreshold">Message Threshold</label>
                      <input type="number" class="admin3d-form-input" id="messageThreshold" name="messageThreshold" min="2" max="20" value="5">
                      <div class="admin3d-form-note">
                        <span>Number of messages</span>
                      </div>
                    </div>
                    
                    <div class="admin3d-form-group half-width">
                      <label class="admin3d-form-label" for="timeThreshold">Time Window</label>
                      <input type="number" class="admin3d-form-input" id="timeThreshold" name="timeThreshold" min="1" max="30" value="5">
                      <div class="admin3d-form-note">
                        <span>Seconds</span>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Violation Actions -->
                <div class="settings-section">
                  <h4 class="settings-section-title">
                    <i class="fas fa-gavel"></i> Automated Actions
                  </h4>
                  
                  <div class="admin3d-form-row">
                    <div class="admin3d-form-group">
                      <label class="admin3d-form-label" for="violationAction">Content Violation Action</label>
                      <select class="admin3d-form-select" id="violationAction" name="violationAction">
                        <option value="delete">Delete Message Only</option>
                        <option value="warn" selected>Warn User</option>
                        <option value="mute">Timeout User</option>
                        <option value="kick">Kick User</option>
                        <option value="ban">Ban User</option>
                      </select>
                    </div>
                    
                    <div class="admin3d-form-group">
                      <label class="admin3d-form-label" for="spamAction">Spam Violation Action</label>
                      <select class="admin3d-form-select" id="spamAction" name="spamAction">
                        <option value="delete">Delete Messages Only</option>
                        <option value="warn">Warn User</option>
                        <option value="mute" selected>Timeout User</option>
                        <option value="kick">Kick User</option>
                        <option value="ban">Ban User</option>
                      </select>
                    </div>
                  </div>
                  
                  <div class="admin3d-form-group">
                    <label class="admin3d-form-label" for="muteDuration">Timeout Duration</label>
                    <select class="admin3d-form-select" id="muteDuration" name="muteDuration">
                      <option value="5m">5 Minutes</option>
                      <option value="10m">10 Minutes</option>
                      <option value="30m" selected>30 Minutes</option>
                      <option value="1h">1 Hour</option>
                      <option value="2h">2 Hours</option>
                      <option value="6h">6 Hours</option>
                      <option value="12h">12 Hours</option>
                      <option value="1d">1 Day</option>
                      <option value="3d">3 Days</option>
                      <option value="7d">7 Days</option>
                    </select>
                  </div>
                  
                  <div class="admin3d-toggle-group">
                    <div class="admin3d-toggle-item">
                      <label class="admin3d-toggle" for="logActions">
                        <input type="checkbox" id="logActions" name="logActions" value="true" checked>
                        <span class="admin3d-toggle-slider"></span>
                      </label>
                      <div class="admin3d-toggle-label">
                        <span>Log All Actions</span>
                        <small>Record all moderation actions to the log channel</small>
                      </div>
                    </div>
                    
                    <div class="admin3d-toggle-item">
                      <label class="admin3d-toggle" for="notifyUsers">
                        <input type="checkbox" id="notifyUsers" name="notifyUsers" value="true" checked>
                        <span class="admin3d-toggle-slider"></span>
                      </label>
                      <div class="admin3d-toggle-label">
                        <span>Notify Users</span>
                        <small>Send DM to users who receive automated warnings</small>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="admin3d-form-actions">
                  <button type="submit" class="admin3d-btn admin3d-btn-primary" id="saveAutomodBtn">
                    <i class="fas fa-save"></i> Save Settings
                  </button>
                </div>
              </form>
            </div>
          </div>
          
          <!-- Auto-Mod Log -->
          <div class="admin3d-card">
            <div class="admin3d-card-header">
              <div>
                <div class="admin3d-card-icon">
                  <i class="fas fa-clipboard-list"></i>
                </div>
              </div>
              <h3 class="admin3d-card-title">Auto-Moderation Log</h3>
              <div class="admin3d-card-actions">
                <button class="admin3d-btn admin3d-btn-icon" id="refreshAutomod" title="Refresh automod log">
                  <i class="fas fa-sync-alt"></i>
                </button>
              </div>
            </div>
            <div class="admin3d-card-content">
              <div class="admin3d-search-filters">
                <div class="admin3d-search-box">
                  <i class="fas fa-search"></i>
                  <input type="text" class="admin3d-form-input" id="automodSearchInput" placeholder="Search logs...">
                </div>
                <div class="admin3d-filter-select">
                  <select class="admin3d-form-select" id="automodFilterSelect">
                    <option value="all">All Violations</option>
                    <option value="profanity">Profanity</option>
                    <option value="spam">Message Spam</option>
                    <option value="mention">Mention Spam</option>
                    <option value="invite">Discord Invites</option>
                    <option value="link">Malicious Links</option>
                  </select>
                </div>
              </div>
              
              <!-- Auto-Mod Log Table -->
              <div class="admin3d-table-wrapper">
                <table class="admin3d-table">
                  <thead>
                    <tr>
                      <th>Time</th>
                      <th>User</th>
                      <th>Violation</th>
                      <th>Action</th>
                      <th>Details</th>
                    </tr>
                  </thead>
                  <tbody id="automodLogBody">
                    <tr class="empty-state">
                      <td colspan="5">
                        <div class="empty-state-message">
                          <i class="fas fa-info-circle"></i>
                          <p>Select a server to view auto-moderation logs</p>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Advanced Filters Tab - NEW FEATURE -->
      <div id="advanced-filters" class="tab-content">
        <div class="admin3d-grid">
          <!-- Message Filter Builder -->
          <div class="admin3d-card" data-premium="true">
            <div class="admin3d-card-header premium-header">
              <div>
