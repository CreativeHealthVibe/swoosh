                          <option value="starts_with">Starts With</option>
                          <option value="ends_with">Ends With</option>
                          <option value="regex">Matches Regex</option>
                          <option value="length_gt">Length Greater Than</option>
                          <option value="length_lt">Length Less Than</option>
                          <option value="has_attachment">Has Attachment</option>
                          <option value="has_link">Has Link</option>
                          <option value="has_mention">Has Mention</option>
                          <option value="has_emoji">Has Emoji</option>
                        </select>
                      </div>
                      <div class="condition-part">
                        <input class="admin3d-form-input" type="text" name="conditionValue[]" placeholder="Value...">
                      </div>
                      <div class="condition-part condition-actions">
                        <button type="button" class="admin3d-btn admin3d-btn-icon admin3d-btn-sm remove-condition">
                          <i class="fas fa-trash-alt"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                  
                  <div class="filter-builder-logic">
                    <h4>Condition Logic</h4>
                    <div class="admin3d-form-group">
                      <select class="admin3d-form-select" id="conditionLogic" name="conditionLogic">
                        <option value="all">Match ALL conditions (AND)</option>
                        <option value="any">Match ANY condition (OR)</option>
                        <option value="custom">Custom Logic</option>
                      </select>
                    </div>
                    <div id="customLogicGroup" class="admin3d-form-group" style="display: none;">
                      <input class="admin3d-form-input" type="text" id="customLogic" name="customLogic" placeholder="Example: (1 AND 2) OR 3">
                      <div class="admin3d-form-note">
                        <i class="fas fa-info-circle"></i>
                        <span>Use condition numbers starting from 1, with AND, OR, NOT operators</span>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="filter-actions">
                  <h4>Actions to Take</h4>
                  <div class="admin3d-form-group">
                    <select class="admin3d-form-select" id="filterAction" name="filterAction">
                      <option value="delete">Delete Message</option>
                      <option value="warn">Warn User</option>
                      <option value="timeout">Timeout User</option>
                      <option value="notify">Notify Moderators</option>
                      <option value="log">Log Only</option>
                    </select>
                  </div>
                  
                  <div class="admin3d-form-group">
                    <label class="admin3d-form-label" for="actionMessage">Message to User</label>
                    <textarea class="admin3d-form-textarea" id="actionMessage" name="actionMessage" 
                              placeholder="Message to send to user when filter is triggered..." rows="2"></textarea>
                  </div>
                </div>
                
                <div class="admin3d-form-actions">
                  <button type="submit" class="admin3d-btn admin3d-btn-success" id="saveFilterBtn">
                    <i class="fas fa-save"></i> Save Filter
                  </button>
                </div>
              </form>
            </div>
          </div>
          
          <!-- Active Filters -->
          <div class="admin3d-card">
            <div class="admin3d-card-header">
              <div>
                <div class="admin3d-card-icon">
                  <i class="fas fa-list"></i>
                </div>
              </div>
              <h3 class="admin3d-card-title">Active Filters</h3>
              <div class="admin3d-card-actions">
                <button class="admin3d-btn admin3d-btn-icon" id="refreshFilters" title="Refresh filter list">
                  <i class="fas fa-sync-alt"></i>
                </button>
              </div>
            </div>
            <div class="admin3d-card-content">
              <div class="active-filters-list" id="activeFiltersList">
                <div class="empty-state">
                  <div class="empty-state-message">
                    <i class="fas fa-info-circle"></i>
                    <p>Select a server to view active filters</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Notification Area -->
  <div class="notification-area"></div>
</div>

