<!-- Admin header partial -->
<header class="admin-header">
  <div class="admin-header-brand">
    <a href="/admin/dashboard">
      <img src="/images/swoosh-logo.png" alt="SWOOSH Bot" class="admin-logo">
      <span>SWOOSH Admin</span>
    </a>
  </div>
  
  <nav class="admin-nav">
    <ul>
      <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="/admin/blacklist"><i class="fas fa-ban"></i> Blacklist</a></li>
      <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
      <li><a href="/admin/logs"><i class="fas fa-list"></i> Logs</a></li>
      <li><a href="/admin/stats"><i class="fas fa-chart-bar"></i> Stats</a></li>
      <li><a href="/admin/members"><i class="fas fa-users"></i> Members</a></li>
      <li><a href="/admin/test-ui" style="color: #9c4dff;"><i class="fas fa-palette"></i> New UI</a></li>
      <li><a href="/admin/users"><i class="fas fa-user-shield"></i> Admin Users</a></li>
    </ul>
  </nav>
  
  <div class="admin-user-menu">
    <div class="user-info">
      <% if (typeof user !== 'undefined' && user) { %>
        <% if (user.userType === 'discord' && user.avatar) { %>
          <!-- Discord user with avatar -->
          <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=64" alt="<%= user.username %>'s Avatar" class="user-avatar">
        <% } else if (user.userType === 'local' && user.avatar) { %>
          <!-- Local user with custom avatar -->
          <img src="<%= user.avatar %>" alt="<%= user.display_name || user.username %>'s Avatar" class="user-avatar">
        <% } else if (user.username) { %>
          <!-- User without avatar, display initials -->
          <div class="user-avatar-placeholder"><%= user.username.charAt(0).toUpperCase() %></div>
        <% } else { %>
          <!-- Fallback -->
          <div class="user-avatar-placeholder">A</div>
        <% } %>
        <span class="username">
          <%= user.display_name || user.username || 'Admin' %>
          <% if (user.userType === 'discord') { %>
            <small class="user-badge">Discord</small>
          <% } %>
        </span>
      <% } else { %>
        <div class="user-avatar-placeholder">A</div>
        <span class="username">Admin</span>
      <% } %>
    </div>
    <div class="dropdown-menu">
      <a href="/admin/profile"><i class="fas fa-user-circle"></i> Profile</a>
      <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
  </div>
</header>

<div class="admin-content">
