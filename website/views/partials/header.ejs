<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof additionalCss !== 'undefined') { %>
        <% additionalCss.forEach(function(cssFile) { %>
            <link rel="stylesheet" href="<%= cssFile %>">
        <% }); %>
    <% } %>
</head>
<body>
    <% if (typeof hideNavbar === 'undefined' || !hideNavbar) { %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/images/swoosh-logo.png" alt="SWOOSH Bot" height="30" class="d-inline-block align-text-top me-2">
                SWOOSH Bot
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/commands"><i class="fas fa-terminal"></i> Commands</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/invite"><i class="fas fa-plus-circle"></i> Invite</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/support"><i class="fas fa-question-circle"></i> Support</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <% if (locals.isAuthenticated) { %>
                        <% if (locals.user && locals.user.isAdmin) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/dashboard"><i class="fas fa-tools"></i> Admin</a>
                            </li>
                        <% } %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <% if (locals.user && locals.user.avatar) { %>
                                    <img src="https://cdn.discordapp.com/avatars/<%= locals.user.id %>/<%= locals.user.avatar %>.png?size=32" class="rounded-circle me-1" style="width: 24px; height: 24px;">
                                <% } else { %>
                                    <i class="fas fa-user-circle"></i>
                                <% } %>
                                <%= locals.user ? locals.user.username : 'Account' %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/auth/profile"><i class="fas fa-id-card"></i> Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <% } %>
