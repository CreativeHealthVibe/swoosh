<!-- Error Page -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center py-4">
          <h2><i class="fas fa-exclamation-triangle me-2"></i> Error <%= error.status %></h2>
        </div>
        <div class="card-body p-4 text-center">
          <div class="mb-4">
            <img src="/images/error.png" alt="Error" class="img-fluid mb-3" style="max-width: 150px;">
            <h3 class="mb-3"><%= message %></h3>
            <p class="lead text-muted">
              <% if (error.status === 403) { %>
                You don't have permission to access this page.
              <% } else if (error.status === 404) { %>
                The page you're looking for doesn't exist.
              <% } else { %>
                Something went wrong. Please try again later.
              <% } %>
            </p>
          </div>
          
          <div class="d-grid gap-2 col-md-6 mx-auto">
            <a href="/" class="btn btn-primary btn-lg">
              <i class="fas fa-home me-2"></i> Go Home
            </a>
            <% if (error.status === 403) { %>
              <a href="/auth/login" class="btn btn-outline-secondary">
                <i class="fas fa-sign-in-alt me-2"></i> Login
              </a>
            <% } %>
          </div>
        </div>
      </div>
      
      <% if (error.stack && process.env.NODE_ENV === 'development') { %>
        <div class="card mt-4 shadow-sm border-0">
          <div class="card-header bg-light">
            <h5 class="mb-0">Error Details (Development Only)</h5>
          </div>
          <div class="card-body">
            <pre class="mb-0 p-3 bg-light"><%= error.stack %></pre>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
