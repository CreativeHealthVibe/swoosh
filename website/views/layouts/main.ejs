<!-- website/views/layouts/main.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SWOOSH Bot' %></title>
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/styles.css">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/img/favicon.png">
  
  <!-- Three.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
</head>
<body>
  <!-- Three.js Background Canvas -->
  <div id="three-background" class="three-background"></div>
  
  <!-- Custom Cursor -->
  <div id="custom-cursor" class="custom-cursor"></div>
  
  <!-- Header Section -->
  <header>
    <div class="navbar">
      <div class="logo">
        <img src="/img/logo.png" alt="SWOOSH Bot Logo">
        <h1>SWOOSH Bot</h1>
      </div>
      <nav id="main-nav">
        <ul>
          <li><a href="/" class="<%= typeof activeNav !== 'undefined' && activeNav === 'home' ? 'active' : '' %>">Home</a></li>
          <li><a href="/commands" class="<%= typeof activeNav !== 'undefined' && activeNav === 'commands' ? 'active' : '' %>">Commands</a></li>
          <li><a href="/status" class="<%= typeof activeNav !== 'undefined' && activeNav === 'status' ? 'active' : '' %>">Status</a></li>
          <li><a href="/bot-status" class="<%= typeof activeNav !== 'undefined' && activeNav === 'bot-status' ? 'active' : '' %>">Dashboard</a></li>
          <li><a href="/server-health" class="<%= typeof activeNav !== 'undefined' && activeNav === 'server-health' ? 'active' : '' %>">Health</a></li>
          <li><a href="/team" class="<%= typeof activeNav !== 'undefined' && activeNav === 'team' ? 'active' : '' %>">Team</a></li>
          <li><a href="https://discord.gg/swoosh" class="discord-btn" target="_blank"><i class="fab fa-discord"></i> Join Discord</a></li>
        </ul>
      </nav>
      <div class="mobile-menu-btn" id="mobile-menu-btn">
        <i class="fas fa-bars"></i>
      </div>
    </div>
  </header>
  
  <!-- Main Content -->
  <main>
    <%- body %>
  </main>
  
  <!-- Footer Section -->
  <footer>
    <div class="footer-content">
      <div class="footer-logo">
        <img src="/img/logo.png" alt="SWOOSH Bot Logo">
        <h3>SWOOSH Bot</h3>
        <p>A sophisticated Discord bot with advanced utility tools and engaging user experiences.</p>
      </div>
      <div class="footer-links">
        <h4>Quick Links</h4>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/commands">Commands</a></li>
          <li><a href="/status">Status</a></li>
          <li><a href="/team">Team</a></li>
          <li><a href="https://github.com/swoosh-bot/swooshbot" target="_blank">GitHub</a></li>
        </ul>
      </div>
      <div class="footer-contact">
        <h4>Connect With Us</h4>
        <p>Join our community to get support, suggest features, or just hang out!</p>
        <div class="social-icons">
          <a href="https://discord.gg/swoosh" target="_blank"><i class="fab fa-discord"></i></a>
          <a href="https://twitter.com/swooshbot" target="_blank"><i class="fab fa-twitter"></i></a>
          <a href="https://github.com/swoosh-bot" target="_blank"><i class="fab fa-github"></i></a>
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; <%= new Date().getFullYear() %> SWOOSH Bot. All rights reserved. | Hosted on <a href="https://render.com" target="_blank">Render</a></p>
    </div>
  </footer>
  
  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script src="/js/three-background.js"></script>
  <script src="/js/cursor.js"></script>
</body>
</html>