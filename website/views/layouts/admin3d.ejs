<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  
  <!-- Favicon -->
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Three.js Library with multi-CDN fallback -->
  <script>
    // Add THREE.js from multiple CDNs with fallback
    (function loadThreeJs() {
      // List of CDN URLs to try
      const threeJsCdns = [
        'https://cdnjs.cloudflare.com/ajax/libs/three.js/r151/three.min.js',
        'https://cdn.jsdelivr.net/npm/three@0.151.0/build/three.min.js',
        'https://unpkg.com/three@0.151.0/build/three.min.js'
      ];
      
      // Try loading from each CDN sequentially
      function loadFromNextCdn(index) {
        if (index >= threeJsCdns.length) {
          console.warn('Failed to load THREE.js from all CDNs');
          // Set a flag in case we need to check
          window.threeJsLoadFailed = true;
          return;
        }
        
        const script = document.createElement('script');
        script.src = threeJsCdns[index];
        script.async = true;
        
        script.onload = function() {
          console.log('THREE.js loaded successfully from ' + threeJsCdns[index]);
        };
        
        script.onerror = function() {
          console.warn('Failed to load THREE.js from ' + threeJsCdns[index]);
          loadFromNextCdn(index + 1);
        };
        
        document.head.appendChild(script);
      }
      
      // Start loading from the first CDN
      loadFromNextCdn(0);
    })();
  </script>
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/admin3d.css">
  
  <!-- Page-specific styles -->
  <% if (title.includes('Moderation')) { %>
    <link rel="stylesheet" href="/css/admin3d-moderation.css">
    <link rel="stylesheet" href="/css/ultra-premium-effects.css">
    <link rel="stylesheet" href="/css/ultra-premium-notifications.css">
    <link rel="stylesheet" href="/css/ultra-premium-modal.css">
  <% } else if (title.includes('Stats')) { %>
    <link rel="stylesheet" href="/css/admin3d-stats.css">
  <% } %>
  
  <!-- Custom JS -->
  <script src="/js/admin3d-scene.js" defer></script>
  <script src="/js/admin3d.js" defer></script>
  
  <!-- Page-specific scripts - only load what's needed -->
  <% if (title.includes('Moderation')) { %>
    <script src="/js/admin3d-moderation-scene.js" defer></script>
    <script src="/js/admin3d-moderation.js" defer></script>
  <% } else if (title.includes('Ticket')) { %>
    <script src="/js/admin3d-tickets.js" defer></script>
  <% } else if (title.includes('Role')) { %>
    <script src="/js/admin3d-roles.js" defer></script>
  <% } else if (title.includes('Blacklist')) { %>
    <script src="/js/admin3d-blacklist.js" defer></script>
  <% } else if (title.includes('Stats')) { %>
    <script src="/js/admin3d-stats.js" defer></script>
  <% } %>
</head>
<body class="admin3d-body <%= title.includes('Message') ? 'no-three-js' : '' %> <%= title.includes('Moderation') ? 'premium-moderation' : '' %>">
  <!-- 3D Canvas Container (hidden on message page, modified for moderation) -->
  <div id="three-container" class="<%= title.includes('Message') ? 'three-js-disabled' : '' %>"></div>
  
  <!-- Specialized moderation 3D container (only on moderation page) -->
  <% if (title.includes('Moderation')) { %>
    <!-- This is a dedicated container that won't interfere with forms -->
    <div id="moderation-three-container" class="premium-three-container"></div>
  <% } %>
  
  <!-- Special fix for form inputs on pages with forms -->
  <% if (title.includes('Message') || title.includes('Moderation')) { %>
  <style>
    /* Completely disable THREE.js on the Messages page */
    .no-three-js #three-container {
      display: none !important;
    }
    
    .three-js-disabled {
      display: none !important;
    }
    
    /* Make form elements work properly */
    .admin3d-form-input,
    .admin3d-form-textarea,
    .admin3d-form-select,
    .admin3d-btn {
      position: relative !important;
      z-index: 1000 !important;
      pointer-events: auto !important;
    }
    
    /* Ensure forms are on top */
    .admin3d-form-group {
      position: relative !important;
      z-index: 1000 !important;
    }
    
    /* Fix card content to ensure interaction */
    .admin3d-card-content {
      position: relative !important;
      z-index: 500 !important;
    }
  </style>
  <% } %>
  
  <!-- Main Container -->
  <div class="admin3d-container">
    <!-- Header -->
    <header class="admin3d-header">
      <div class="admin3d-header-left">
        <div class="admin3d-logo">
          <img src="/images/logo.png" alt="SWOOSH Bot Logo">
          <span>SWOOSH Bot</span>
        </div>
        <button id="sidebar-toggle" class="sidebar-toggle">
          <i class="fas fa-bars"></i>
        </button>
      </div>
      
      <div class="admin3d-header-right">
        <div class="admin3d-user">
          <% if (typeof user !== 'undefined' && user) { %>
            <span><%= user.username %></span>
            <div class="admin3d-user-avatar">
              <% if (user.avatar) { %>
                <img src="<%= user.avatar %>" alt="<%= user.username %>'s avatar">
              <% } else { %>
                <i class="fas fa-user"></i>
              <% } %>
            </div>
          <% } else { %>
            <span>Guest</span>
            <div class="admin3d-user-avatar">
              <i class="fas fa-user"></i>
            </div>
          <% } %>
          <div class="admin3d-user-dropdown">
            <a href="/admin3d/profile"><i class="fas fa-user-circle"></i> Profile</a>
            <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Main Content Area -->
    <div class="admin3d-content-wrapper">
      <!-- Sidebar -->
      <aside class="admin3d-sidebar">
        <nav class="admin3d-nav">
          <ul>
            <li>
              <a href="/admin3d" class="<%= title.includes('Dashboard') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-tachometer-alt"></i>
                </div>
                <span>Dashboard</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/commands" class="<%= title.includes('Commands') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-terminal"></i>
                </div>
                <span>Commands</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/moderation" class="<%= title.includes('Moderation') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-gavel"></i>
                </div>
                <span>Moderation</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/messages" class="<%= title.includes('Message') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-envelope"></i>
                </div>
                <span>Messages</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/tickets" class="<%= title.includes('Ticket') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-ticket-alt"></i>
                </div>
                <span>Tickets</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/roles" class="<%= title.includes('Role') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-user-tag"></i>
                </div>
                <span>Roles</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/blacklist" class="<%= title.includes('Blacklist') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-ban"></i>
                </div>
                <span>Blacklist</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/stats" class="<%= title.includes('Statistics') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-chart-line"></i>
                </div>
                <span>Statistics</span>
              </a>
            </li>
          </ul>
        </nav>
        
        <!-- Connection Status -->
        <div class="connection-status">
          <% if (typeof client !== 'undefined' && client) { %>
            <i class="fas fa-circle connected"></i>
            <span>Bot Online</span>
          <% } else { %>
            <i class="fas fa-circle disconnected"></i>
            <span>Bot Offline</span>
          <% } %>
        </div>
      </aside>
      
      <!-- Main Content -->
      <main class="admin3d-main">
        <!-- Flash Messages -->
        <% if (typeof messages !== 'undefined') { %>
          <div class="flash-messages">
            <% if (messages.success && messages.success.length > 0) { %>
              <div class="flash-message success">
                <i class="fas fa-check-circle"></i>
                <span><%= messages.success %></span>
                <button class="close-btn"><i class="fas fa-times"></i></button>
              </div>
            <% } %>
            
            <% if (messages.error && messages.error.length > 0) { %>
              <div class="flash-message error">
                <i class="fas fa-exclamation-circle"></i>
                <span><%= messages.error %></span>
                <button class="close-btn"><i class="fas fa-times"></i></button>
              </div>
            <% } %>
          </div>
        <% } %>
        
        <!-- Page Content -->
        <%- body %>
      </main>
    </div>
    
    <!-- Footer -->
    <footer class="admin3d-footer">
      <div class="admin3d-footer-left">
        &copy; <%= new Date().getFullYear() %> SWOOSH Bot
      </div>
      <div class="admin3d-footer-right">
        <a href="https://github.com/cjhetzle/discord-utility-bot" target="_blank">
          <i class="fab fa-github"></i> GitHub
        </a>
        <span class="footer-separator">|</span>
        <a href="/doc" target="_blank">Terms</a>
        <span class="footer-separator">|</span>
        <a href="/privacy" target="_blank">Privacy</a>
      </div>
    </footer>
  </div>
  
  <!-- Notification Area -->
  <div class="notification-area"></div>
  
  <!-- Loading Overlay -->
  <div class="loading-overlay" style="display: none;">
    <div class="loading-spinner"></div>
    <div class="loading-text">Processing...</div>
  </div>
  
  <!-- Ultra Premium Scripts (only on premium pages) -->
  <% if (title.includes('Moderation')) { %>
    <script src="/js/ultra-premium-particles.js" defer></script>
    <script>
      // Initialize with a welcome notification when page loads
      document.addEventListener('DOMContentLoaded', () => {
        setTimeout(() => {
          if (typeof UltraPremiumNotification !== 'undefined') {
            UltraPremiumNotification.info('Welcome to the Ultra Premium Moderation System', {
              duration: 6000,
              animation: 'slide-right'
            });
          }
        }, 1000);
      });
    </script>
  <% } %>
</body>
</html>