<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  
  <!-- Favicon -->
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Three.js Library with multi-CDN fallback -->
  <script>
    // Add THREE.js from multiple CDNs with fallback
    (function loadThreeJs() {
      // List of CDN URLs to try
      const threeJsCdns = [
        'https://cdnjs.cloudflare.com/ajax/libs/three.js/r151/three.min.js',
        'https://cdn.jsdelivr.net/npm/three@0.151.0/build/three.min.js',
        'https://unpkg.com/three@0.151.0/build/three.min.js'
      ];
      
      // Try loading from each CDN sequentially
      function loadFromNextCdn(index) {
        if (index >= threeJsCdns.length) {
          console.warn('Failed to load THREE.js from all CDNs');
          // Set a flag in case we need to check
          window.threeJsLoadFailed = true;
          return;
        }
        
        const script = document.createElement('script');
        script.src = threeJsCdns[index];
        script.async = true;
        
        script.onload = function() {
          console.log('THREE.js loaded successfully from ' + threeJsCdns[index]);
        };
        
        script.onerror = function() {
          console.warn('Failed to load THREE.js from ' + threeJsCdns[index]);
          loadFromNextCdn(index + 1);
        };
        
        document.head.appendChild(script);
      }
      
      // Start loading from the first CDN
      loadFromNextCdn(0);
    })();
  </script>
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/admin3d.css">
  
  <!-- Page-specific styles -->
  <% if (title.includes('Stats')) { %>
    <link rel="stylesheet" href="/css/admin3d-stats.css">
  <% } %>
  <% if (title.includes('Moderation')) { %>
    <link rel="stylesheet" href="/css/admin3d-moderation.css">
    <% if (typeof customStyles !== 'undefined' && customStyles) { %>
      <% customStyles.forEach(style => { %>
        <link rel="stylesheet" href="/css/<%= style %>">
      <% }); %>
    <% } %>
  <% } %>
  <!-- Common functionality styles for all admin pages -->
  <link rel="stylesheet" href="/css/admin3d-notifications.css">
  <link rel="stylesheet" href="/css/admin3d-modal.css">
  
  <!-- Custom JS -->
  <script src="/js/admin3d-scene.js" defer></script>
  <script src="/js/admin3d.js" defer></script>
  
  <!-- Page-specific scripts - only load what's needed -->
  <% if (title.includes('Ticket')) { %>
    <script src="/js/admin3d-tickets.js" defer></script>
  <% } else if (title.includes('Role')) { %>
    <script src="/js/admin3d-roles.js" defer></script>
  <% } else if (title.includes('Blacklist')) { %>
    <script src="/js/admin3d-blacklist.js" defer></script>
  <% } else if (title.includes('Stats')) { %>
    <script src="/js/admin3d-stats.js" defer></script>
  <% } else if (title.includes('Moderation')) { %>
    <script src="/js/admin3d-moderation.js" defer></script>
    <script src="/js/admin3d-moderation-scene.js" defer></script>
  <% } %>
</head>
<body class="admin3d-body <%= title.includes('Message') ? 'no-three-js' : '' %>">
  <!-- 3D Canvas Container (hidden on message page) -->
  <div id="three-container" class="<%= title.includes('Message') ? 'three-js-disabled' : '' %>"></div>
  
  <!-- Special fix for form inputs on pages with forms -->
  <% if (title.includes('Message') || title.includes('Moderation')) { %>
  <style>
    /* Completely disable THREE.js on the Messages page */
    .no-three-js #three-container {
      display: none !important;
    }
    
    .three-js-disabled {
      display: none !important;
    }
    
    /* Make form elements work properly */
    .admin3d-form-input,
    .admin3d-form-textarea,
    .admin3d-form-select,
    .admin3d-btn {
      position: relative !important;
      z-index: 1000 !important;
      pointer-events: auto !important;
    }
    
    /* Ensure forms are on top */
    .admin3d-form-group {
      position: relative !important;
      z-index: 1000 !important;
    }
    
    /* Fix card content to ensure interaction */
    .admin3d-card-content {
      position: relative !important;
      z-index: 500 !important;
    }
  </style>
  <% } %>
  
  <!-- Main Container -->
  <div class="admin3d-container">
    <!-- Header -->
    <header class="admin3d-header" style="text-align: left !important; padding-top: 10px; padding-bottom: 10px; margin-top: 0; display: flex; align-items: center; height: 60px; background-color: rgba(0, 0, 0, 0.9); box-shadow: 0 0 10px rgba(137, 54, 255, 0.7); border-radius: 8px; border: none;">
      <table width="100%" border="0" cellspacing="0" cellpadding="0" style="table-layout: fixed;">
        <tr style="vertical-align: middle;">
          <td align="left" width="70%" style="vertical-align: middle;">
            <div class="admin3d-header-left" style="justify-content: flex-start !important; text-align: left !important; width: 100%; display: flex; align-items: center;">
              <div class="admin3d-logo" style="justify-content: flex-start !important; text-align: left !important; margin: 0 !important; float: left !important; padding: 8px 12px; background-color: rgba(0, 0, 0, 0.7); border-radius: 10px; box-shadow: 0 0 4px rgba(137, 54, 255, 0.6); transition: all 0.2s ease;" onmouseover="this.style.backgroundColor='rgba(20, 20, 20, 0.9)'; this.style.boxShadow='0 0 12px rgba(137, 54, 255, 1)';" onmouseout="this.style.backgroundColor='rgba(0, 0, 0, 0.7)'; this.style.boxShadow='0 0 4px rgba(137, 54, 255, 0.6)';"">
                <div class="swoosh-logo-mark">
                  <img src="/images/swoosh-icon.png" alt="SWOOSH Bot Icon" style="filter: drop-shadow(0 0 2px rgba(137, 54, 255, 0.8));">
                </div>
                <span class="swoosh-text" style="text-shadow: 1px 1px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000; color: white;">SWOOSH<span class="bot-text" style="text-shadow: 1px 1px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000; color: #a970ff;">Bot</span></span>
              </div>
              <button id="sidebar-toggle" class="sidebar-toggle">
                <i class="fas fa-bars"></i>
              </button>
            </div>
          </td>
          <td align="right" width="30%" style="text-align: right !important; vertical-align: middle;">
            <div class="admin3d-header-right" style="justify-content: flex-end !important; margin-left: auto !important; display: flex; align-items: center;">
              <div class="admin3d-user" style="display: flex; justify-content: flex-end; margin-left: auto; position: relative; cursor: pointer; padding: 8px 12px; border-radius: 8px; transition: all 0.2s ease; background-color: rgba(0, 0, 0, 0.7); box-shadow: 0 0 4px rgba(137, 54, 255, 0.6); border: none;" onmouseover="this.style.backgroundColor='rgba(20, 20, 20, 0.9)'; this.style.boxShadow='0 0 12px rgba(137, 54, 255, 1)';" onmouseout="this.style.backgroundColor='rgba(0, 0, 0, 0.7)'; this.style.boxShadow='0 0 4px rgba(137, 54, 255, 0.6)';" onclick="toggleUserDropdown()">
                <% if (typeof user !== 'undefined' && user) { %>
                  <span style="text-shadow: 1px 1px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000; color: white;"><%= user.username %></span>
                  <div class="admin3d-user-avatar" style="background-color: rgba(0, 0, 0, 0.8); box-shadow: 0 0 8px rgba(137, 54, 255, 0.8); border-radius: 50%; margin-left: 10px; border: none; transition: all 0.2s ease;" onmouseover="this.style.boxShadow='0 0 12px rgba(137, 54, 255, 1)';" onmouseout="this.style.boxShadow='0 0 8px rgba(137, 54, 255, 0.8)';">
                    <% if (user.avatar) { %>
                      <img src="<%= user.avatar %>" alt="<%= user.username %>'s avatar" style="border-radius: 50%; filter: drop-shadow(0 0 4px rgba(137, 54, 255, 0.7));">
                    <% } else { %>
                      <i class="fas fa-user" style="color: #a970ff; text-shadow: 1px 1px 0 #000;"></i>
                    <% } %>
                  </div>
                  <i class="fas fa-caret-down" style="margin-left: 5px; color: #a970ff; text-shadow: 1px 1px 0 #000;"></i>
                <% } else { %>
                  <span style="text-shadow: 1px 1px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000; color: white;">Guest</span>
                  <div class="admin3d-user-avatar" style="background-color: rgba(0, 0, 0, 0.8); box-shadow: 0 0 8px rgba(137, 54, 255, 0.8); border-radius: 50%; margin-left: 10px; border: none; transition: all 0.2s ease;" onmouseover="this.style.boxShadow='0 0 12px rgba(137, 54, 255, 1)';" onmouseout="this.style.boxShadow='0 0 8px rgba(137, 54, 255, 0.8)';">
                    <i class="fas fa-user" style="color: #a970ff; text-shadow: 1px 1px 0 #000;"></i>
                  </div>
                  <i class="fas fa-caret-down" style="margin-left: 5px; color: #a970ff; text-shadow: 1px 1px 0 #000;"></i>
                <% } %>
                <div id="userDropdown" class="admin3d-user-dropdown" style="display: none; position: fixed; top: 80px; right: 20px; background-color: #000; border-radius: 12px; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.8), 0 0 12px rgba(137, 54, 255, 0.6); padding: 1.25rem; width: 220px; z-index: 9999;">
                  <a href="/admin3d/profile" style="color: white; text-decoration: none; padding: 0.75rem 1rem; display: block; border-radius: 8px; transition: all 0.3s ease; margin-bottom: 0.75rem; text-shadow: 1px 1px 0 #000; background-color: rgba(0, 0, 0, 0.7); box-shadow: 0 0 4px rgba(137, 54, 255, 0.6); border: none;" onmouseover="this.style.backgroundColor='rgba(20, 20, 20, 0.9)';this.style.transform='translateX(3px)';this.style.boxShadow='0 0 12px rgba(137, 54, 255, 1)';" onmouseout="this.style.backgroundColor='rgba(0, 0, 0, 0.7)';this.style.transform='translateX(0)';this.style.boxShadow='0 0 4px rgba(137, 54, 255, 0.6)';""><i class="fas fa-user-circle" style="margin-right: 10px; color: #a970ff;"></i> Profile</a>
                  <a href="/auth/logout" style="color: white; text-decoration: none; padding: 0.75rem 1rem; display: block; border-radius: 8px; transition: all 0.3s ease; text-shadow: 1px 1px 0 #000; background-color: rgba(0, 0, 0, 0.7); box-shadow: 0 0 4px rgba(137, 54, 255, 0.6); border: none;" onmouseover="this.style.backgroundColor='rgba(20, 20, 20, 0.9)';this.style.transform='translateX(3px)';this.style.boxShadow='0 0 12px rgba(137, 54, 255, 1)';" onmouseout="this.style.backgroundColor='rgba(0, 0, 0, 0.7)';this.style.transform='translateX(0)';this.style.boxShadow='0 0 4px rgba(137, 54, 255, 0.6)';""><i class="fas fa-sign-out-alt" style="margin-right: 10px; color: #a970ff;"></i> Logout</a>
                </div>
              </div>
              
              <script>
                function toggleUserDropdown() {
                  var dropdown = document.getElementById("userDropdown");
                  var caretIcon = document.querySelector(".admin3d-user .fa-caret-down");
                  
                  if (dropdown.style.display === "none") {
                    // Show dropdown with animation
                    dropdown.style.display = "block";
                    dropdown.style.opacity = "0";
                    dropdown.style.transform = "translateY(-10px)";
                    
                    // Rotate caret icon
                    if (caretIcon) {
                      caretIcon.style.transform = "rotate(180deg)";
                      caretIcon.style.color = "#a970ff";
                      caretIcon.style.textShadow = "0 0 3px rgba(169, 112, 255, 0.6)";
                    }
                    
                    // Trigger animation
                    setTimeout(function() {
                      dropdown.style.opacity = "1";
                      dropdown.style.transform = "translateY(0)";
                    }, 10);
                  } else {
                    // Hide dropdown with animation
                    dropdown.style.opacity = "0";
                    dropdown.style.transform = "translateY(-10px)";
                    
                    // Reset caret icon
                    if (caretIcon) {
                      caretIcon.style.transform = "rotate(0deg)";
                      caretIcon.style.color = "#a970ff";
                      caretIcon.style.textShadow = "1px 1px 0 #000";
                    }
                    
                    // Complete hiding after animation
                    setTimeout(function() {
                      dropdown.style.display = "none";
                    }, 200);
                  }
                }
                
                // Close dropdown when clicking outside
                document.addEventListener('click', function(event) {
                  var dropdown = document.getElementById("userDropdown");
                  var userAvatar = document.querySelector(".admin3d-user");
                  var caretIcon = document.querySelector(".admin3d-user .fa-caret-down");
                  
                  if (!userAvatar.contains(event.target) && dropdown.style.display === "block") {
                    // Hide dropdown with animation
                    dropdown.style.opacity = "0";
                    dropdown.style.transform = "translateY(-10px)";
                    
                    // Reset caret icon
                    if (caretIcon) {
                      caretIcon.style.transform = "rotate(0deg)";
                      caretIcon.style.color = "#a970ff";
                      caretIcon.style.textShadow = "1px 1px 0 #000";
                    }
                    
                    // Complete hiding after animation
                    setTimeout(function() {
                      dropdown.style.display = "none";
                    }, 200);
                  }
                }, true);
                
                // Add transition styles to dropdown and caret
                document.addEventListener("DOMContentLoaded", function() {
                  var dropdown = document.getElementById("userDropdown");
                  var caretIcon = document.querySelector(".admin3d-user .fa-caret-down");
                  
                  if (dropdown) {
                    dropdown.style.transition = "opacity 0.2s ease, transform 0.2s ease";
                  }
                  
                  if (caretIcon) {
                    caretIcon.style.transition = "transform 0.2s ease, color 0.2s ease";
                  }
                });
              </script>
            </div>
          </td>
        </tr>
      </table>
    </header>
    
    <!-- Main Content Area -->
    <div class="admin3d-content-wrapper">
      <!-- Sidebar -->
      <aside class="admin3d-sidebar">
        <nav class="admin3d-nav">
          <ul>
            <li>
              <a href="/admin3d" class="<%= title.includes('Dashboard') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-tachometer-alt"></i>
                </div>
                <span>Dashboard</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/commands" class="<%= title.includes('Commands') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-terminal"></i>
                </div>
                <span>Commands</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/moderation" class="<%= title.includes('Moderation') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-gavel"></i>
                </div>
                <span>Moderation</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/messages" class="<%= title.includes('Message') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-envelope"></i>
                </div>
                <span>Messages</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/tickets" class="<%= title.includes('Ticket') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-ticket-alt"></i>
                </div>
                <span>Tickets</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/roles" class="<%= title.includes('Role') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-user-tag"></i>
                </div>
                <span>Roles</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/blacklist" class="<%= title.includes('Blacklist') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-ban"></i>
                </div>
                <span>Blacklist</span>
              </a>
            </li>
            <li>
              <a href="/admin3d/stats" class="<%= title.includes('Statistics') ? 'active' : '' %>">
                <div class="nav-icon">
                  <i class="fas fa-chart-line"></i>
                </div>
                <span>Statistics</span>
              </a>
            </li>
          </ul>
        </nav>
        
        <!-- Connection Status -->
        <div class="connection-status">
          <% if (typeof client !== 'undefined' && client) { %>
            <i class="fas fa-circle connected"></i>
            <span>Bot Online</span>
          <% } else { %>
            <i class="fas fa-circle disconnected"></i>
            <span>Bot Offline</span>
          <% } %>
        </div>
      </aside>
      
      <!-- Main Content -->
      <main class="admin3d-main">
        <!-- Flash Messages -->
        <% if (typeof messages !== 'undefined') { %>
          <div class="flash-messages">
            <% if (messages.success && messages.success.length > 0) { %>
              <div class="flash-message success">
                <i class="fas fa-check-circle"></i>
                <span><%= messages.success %></span>
                <button class="close-btn"><i class="fas fa-times"></i></button>
              </div>
            <% } %>
            
            <% if (messages.error && messages.error.length > 0) { %>
              <div class="flash-message error">
                <i class="fas fa-exclamation-circle"></i>
                <span><%= messages.error %></span>
                <button class="close-btn"><i class="fas fa-times"></i></button>
              </div>
            <% } %>
          </div>
        <% } %>
        
        <!-- Page Content -->
        <%- body %>
      </main>
    </div>
    
    <!-- Footer -->
    <footer class="admin3d-footer">
      <div class="admin3d-footer-left">
        &copy; <%= new Date().getFullYear() %> SWOOSH Bot
      </div>
      <div class="admin3d-footer-right">
        <a href="https://github.com/cjhetzle/discord-utility-bot" target="_blank">
          <i class="fab fa-github"></i> GitHub
        </a>
        <span class="footer-separator">|</span>
        <a href="/doc" target="_blank">Terms</a>
        <span class="footer-separator">|</span>
        <a href="/privacy" target="_blank">Privacy</a>
      </div>
    </footer>
  </div>
  
  <!-- Notification Area -->
  <div class="notification-area"></div>
  
  <!-- Loading Overlay -->
  <div class="loading-overlay" style="display: none;">
    <div class="loading-spinner"></div>
    <div class="loading-text">Processing...</div>
  </div>
  
  <!-- Common welcome notification script -->
  <script>
    // Initialize with a welcome notification when page loads
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(() => {
        if (typeof Admin3DNotification !== 'undefined') {
          Admin3DNotification.info('Welcome to the SWOOSH Bot Dashboard', {
            duration: 6000,
            animation: 'slide-right'
          });
        }
      }, 1000);
    });
  </script>
</body>
</html>