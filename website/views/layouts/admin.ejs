<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'SWOOSH Bot Admin Dashboard' %></title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/favicon.png">
  
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin.css">
  
  <!-- Page-specific CSS -->
  <% if (typeof pageStyles !== 'undefined') { %>
    <link rel="stylesheet" href="<%= pageStyles %>">
  <% } %>
</head>
<body>
  <div class="admin-wrapper">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="logo-container">
          <img src="/images/swoosh-logo.png" alt="SWOOSH Bot Logo" class="sidebar-logo">
          <h1 class="sidebar-title">SWOOSH</h1>
        </div>
        <button class="mobile-toggle" id="sidebar-toggle">
          <i class="fas fa-bars"></i>
        </button>
      </div>
      
      <div class="sidebar-content">
        <nav class="sidebar-nav">
          <ul class="nav-list">
            <li class="nav-item <%= path === '/admin/welcome' ? 'active' : '' %>">
              <a href="/admin/welcome" class="nav-link">
                <i class="fas fa-home"></i>
                <span>Dashboard</span>
              </a>
            </li>
            <li class="nav-item <%= path === '/admin/users' ? 'active' : '' %>">
              <a href="/admin/users" class="nav-link">
                <i class="fas fa-users"></i>
                <span>User Management</span>
              </a>
            </li>
            <li class="nav-item <%= path === '/admin/logs' ? 'active' : '' %>">
              <a href="/admin/logs" class="nav-link">
                <i class="fas fa-list"></i>
                <span>Logs</span>
              </a>
            </li>
            <li class="nav-item <%= path === '/admin/bounties' ? 'active' : '' %>">
              <a href="/admin/bounties" class="nav-link">
                <i class="fas fa-coins"></i>
                <span>Bounties</span>
              </a>
            </li>
            <li class="nav-item <%= path === '/admin/customization' ? 'active' : '' %>">
              <a href="/admin/customization" class="nav-link">
                <i class="fas fa-paint-brush"></i>
                <span>Customization</span>
              </a>
            </li>
            <li class="nav-item <%= path === '/admin/settings' ? 'active' : '' %>">
              <a href="/admin/settings" class="nav-link">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
              </a>
            </li>
            <li class="nav-divider"></li>
            <li class="nav-item">
              <a href="https://github.com/your-username/swoosh-bot" target="_blank" class="nav-link">
                <i class="fab fa-github"></i>
                <span>GitHub</span>
              </a>
            </li>
            <li class="nav-item">
              <a href="/docs" class="nav-link">
                <i class="fas fa-book"></i>
                <span>Documentation</span>
              </a>
            </li>
          </ul>
        </nav>
        
        <div class="sidebar-footer">
          <div class="user-info">
            <% if (user && user.avatar) { %>
              <img src="<%= user.avatar %>" alt="User Avatar" class="user-avatar">
            <% } else { %>
              <div class="user-avatar-placeholder">
                <i class="fas fa-user"></i>
              </div>
            <% } %>
            <div class="user-details">
              <p class="user-name"><%= user ? user.username : 'Guest' %></p>
              <p class="user-role">Administrator</p>
            </div>
          </div>
          <div class="footer-actions">
            <a href="/logout" class="logout-button">
              <i class="fas fa-sign-out-alt"></i>
              <span>Logout</span>
            </a>
          </div>
        </div>
      </div>
    </aside>
    
    <!-- Main Content Area -->
    <main class="main-content">
      <!-- Top Header -->
      <header class="top-header">
        <div class="header-left">
          <button class="sidebar-toggle-desktop" id="sidebar-toggle-desktop">
            <i class="fas fa-bars"></i>
          </button>
          
          <div class="breadcrumb">
            <span class="breadcrumb-item">SWOOSH Bot</span>
            <% if (path && path !== '/admin/welcome') { %>
              <span class="breadcrumb-separator">/</span>
              <span class="breadcrumb-item"><%= path.split('/').pop() %></span>
            <% } %>
          </div>
        </div>
        
        <div class="header-right">
          <div class="bot-status online">
            <span class="status-dot"></span>
            <span class="status-text">Bot Online</span>
          </div>
          
          <div class="header-actions">
            <button class="action-button" title="Notifications">
              <i class="fas fa-bell"></i>
              <span class="notification-badge">3</span>
            </button>
            
            <div class="dropdown">
              <button class="dropdown-toggle">
                <i class="fas fa-globe"></i>
              </button>
              <div class="dropdown-menu">
                <a href="?lang=en" class="dropdown-item">English</a>
                <a href="?lang=es" class="dropdown-item">Español</a>
                <a href="?lang=fr" class="dropdown-item">Français</a>
              </div>
            </div>
            
            <button class="theme-toggle" id="theme-toggle" title="Toggle Dark/Light Mode">
              <i class="fas fa-moon"></i>
            </button>
          </div>
        </div>
      </header>
      
      <!-- Page Content -->
      <div class="page-content">
        <!-- Alerts Container -->
        <div class="alerts-container">
          <% if (typeof messages !== 'undefined' && messages.success) { %>
            <div class="alert alert-success">
              <i class="fas fa-check-circle"></i>
              <span><%= messages.success %></span>
              <button class="alert-close"><i class="fas fa-times"></i></button>
            </div>
          <% } %>
          
          <% if (typeof messages !== 'undefined' && messages.error) { %>
            <div class="alert alert-error">
              <i class="fas fa-exclamation-circle"></i>
              <span><%= messages.error %></span>
              <button class="alert-close"><i class="fas fa-times"></i></button>
            </div>
          <% } %>
          
          <% if (typeof messages !== 'undefined' && messages.info) { %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle"></i>
              <span><%= messages.info %></span>
              <button class="alert-close"><i class="fas fa-times"></i></button>
            </div>
          <% } %>
        </div>
        
        <!-- Main Content -->
        <%- body %>
      </div>
      
      <!-- Footer -->
      <footer class="main-footer">
        <div class="footer-left">
          &copy; 2023-<span id="current-year">2025</span> SWOOSH Bot. All rights reserved.
        </div>
        <div class="footer-right">
          <a href="/terms" class="footer-link">Terms</a>
          <a href="/privacy" class="footer-link">Privacy</a>
          <a href="/contact" class="footer-link">Contact</a>
        </div>
      </footer>
    </main>
  </div>

  <!-- Core JavaScript -->
  <script>
    // Update current year in footer
    document.getElementById('current-year').textContent = new Date().getFullYear();
    
    // Mobile sidebar toggle
    document.getElementById('sidebar-toggle').addEventListener('click', function() {
      document.querySelector('.admin-wrapper').classList.toggle('sidebar-open');
    });
    
    // Desktop sidebar toggle
    document.getElementById('sidebar-toggle-desktop').addEventListener('click', function() {
      document.querySelector('.admin-wrapper').classList.toggle('sidebar-collapsed');
    });
    
    // Handle alert close buttons
    document.querySelectorAll('.alert-close').forEach(button => {
      button.addEventListener('click', function() {
        this.closest('.alert').style.display = 'none';
      });
    });
    
    // Theme toggle functionality
    const themeToggle = document.getElementById('theme-toggle');
    const htmlElement = document.documentElement;
    
    // Check if user preference is stored
    const savedTheme = localStorage.getItem('swoosh-theme');
    if (savedTheme) {
      htmlElement.setAttribute('data-theme', savedTheme);
      updateThemeIcon(savedTheme);
    }
    
    themeToggle.addEventListener('click', function() {
      const currentTheme = htmlElement.getAttribute('data-theme') || 'dark';
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      
      htmlElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('swoosh-theme', newTheme);
      
      updateThemeIcon(newTheme);
    });
    
    function updateThemeIcon(theme) {
      const icon = themeToggle.querySelector('i');
      if (theme === 'dark') {
        icon.className = 'fas fa-sun';
      } else {
        icon.className = 'fas fa-moon';
      }
    }
    
    // Dropdown functionality
    document.querySelectorAll('.dropdown-toggle').forEach(toggle => {
      toggle.addEventListener('click', function() {
        const dropdown = this.closest('.dropdown');
        dropdown.classList.toggle('open');
        
        // Close other open dropdowns
        document.querySelectorAll('.dropdown.open').forEach(openDropdown => {
          if (openDropdown !== dropdown) {
            openDropdown.classList.remove('open');
          }
        });
      });
    });
    
    // Close dropdowns when clicking outside
    document.addEventListener('click', function(event) {
      if (!event.target.closest('.dropdown')) {
        document.querySelectorAll('.dropdown.open').forEach(dropdown => {
          dropdown.classList.remove('open');
        });
      }
    });
  </script>
  
  <!-- Page-specific JavaScript -->
  <% if (typeof pageScripts !== 'undefined') { %>
    <% pageScripts.forEach(function(script) { %>
      <script src="<%= script %>"></script>
    <% }); %>
  <% } %>
</body>
</html>