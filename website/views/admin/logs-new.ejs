<style>
  /* Logs page specific styles */
  .logs-container {
    padding: 1.5rem;
  }
  
  .log-card {
    background: rgba(30, 15, 50, 0.5);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    border: 1px solid rgba(156, 77, 255, 0.3);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.36);
    overflow: hidden;
    transition: all 0.3s ease;
    margin-bottom: 2rem;
  }
  
  .log-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 40px 0 rgba(156, 77, 255, 0.2);
  }
  
  .log-header {
    background: linear-gradient(135deg, rgba(156, 77, 255, 0.3), rgba(0, 229, 255, 0.2));
    padding: 1.5rem;
    border-bottom: 1px solid rgba(156, 77, 255, 0.2);
    position: relative;
    overflow: hidden;
  }
  
  .log-header::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(156, 77, 255, 0.1) 0%, transparent 70%);
    animation: pulse 10s infinite linear;
    z-index: 0;
  }
  
  @keyframes pulse {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .log-title {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(to right, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0;
    position: relative;
    z-index: 1;
  }
  
  .log-count {
    display: inline-block;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-weight: 600;
    position: relative;
    z-index: 1;
    box-shadow: 0 4px 15px rgba(156, 77, 255, 0.4);
  }
  
  .log-body {
    padding: 1.5rem;
  }
  
  .log-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    color: var(--text-secondary);
  }
  
  .log-empty i {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.7;
    color: var(--primary-light);
  }
  
  .log-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 10px;
  }
  
  .log-table thead th {
    padding: 1rem;
    color: var(--text-secondary);
    font-weight: 600;
    border-bottom: 1px solid rgba(156, 77, 255, 0.2);
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 1px;
  }
  
  .log-table tbody tr {
    background: rgba(30, 21, 50, 0.7);
    transition: all 0.3s ease;
    transform: scale(1);
  }
  
  .log-table tbody tr:hover {
    background: rgba(45, 30, 70, 0.8);
    transform: scale(1.01);
  }
  
  .log-table td {
    padding: 1rem;
    border-top: none;
    color: var(--text-primary);
    vertical-align: middle;
  }
  
  .log-table tr td:first-child {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
  }
  
  .log-table tr td:last-child {
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
  }
  
  .log-file-name {
    font-weight: 600;
    color: var(--primary-light);
  }
  
  .log-size {
    font-family: 'Courier New', monospace;
    color: var(--accent-color);
    font-weight: 600;
  }
  
  .log-date {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }
  
  .log-actions {
    display: flex;
    gap: 10px;
  }
  
  .btn-view {
    background: linear-gradient(135deg, var(--primary-color), #8040cc);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(156, 77, 255, 0.3);
  }
  
  .btn-view:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(156, 77, 255, 0.5);
    background: linear-gradient(135deg, #a85aff, var(--primary-color));
  }
  
  .btn-download {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid rgba(156, 77, 255, 0.5);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-weight: 600;
  }
  
  .btn-download:hover {
    background: rgba(156, 77, 255, 0.1);
    border-color: var(--primary-color);
    transform: translateY(-2px);
  }
  
  /* Stats cards */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .stat-card {
    background: rgba(30, 21, 50, 0.7);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    border: 1px solid rgba(156, 77, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(156, 77, 255, 0.2);
    border-color: rgba(156, 77, 255, 0.4);
  }
  
  .stat-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 0 5px rgba(156, 77, 255, 0.3));
  }
  
  .stat-value {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    color: var(--text-secondary);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  /* Type badges */
  .log-type {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .log-type-error {
    background: rgba(255, 80, 80, 0.2);
    color: #ff5050;
    border: 1px solid rgba(255, 80, 80, 0.3);
  }
  
  .log-type-system {
    background: rgba(0, 229, 255, 0.1);
    color: var(--accent-color);
    border: 1px solid rgba(0, 229, 255, 0.2);
  }
  
  .log-type-command {
    background: rgba(255, 171, 64, 0.1);
    color: #ffab40;
    border: 1px solid rgba(255, 171, 64, 0.2);
  }
  
  .log-type-general {
    background: rgba(156, 77, 255, 0.1);
    color: var(--primary-color);
    border: 1px solid rgba(156, 77, 255, 0.2);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .log-actions {
      flex-direction: column;
      gap: 8px;
    }
    
    .log-table td,
    .log-table th {
      padding: 0.75rem;
    }
    
    .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
  }
</style>

<div class="logs-container">
  <!-- Dashboard section -->
  <div class="log-card">
    <div class="log-header">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="log-title">Logs Dashboard</h3>
        <span class="log-count"><i class="fas fa-tachometer-alt"></i> System Overview</span>
      </div>
    </div>
    <div class="log-body">
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-file-alt"></i>
          </div>
          <div class="stat-value"><%= logStats.totalCount %></div>
          <div class="stat-label">Log Files</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-database"></i>
          </div>
          <div class="stat-value"><%= formatFileSize(logStats.totalSize) %></div>
          <div class="stat-label">Total Size</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <div class="stat-value"><%= logStats.categories.error %></div>
          <div class="stat-label">Error Logs</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-server"></i>
          </div>
          <div class="stat-value"><%= logStats.categories.system %></div>
          <div class="stat-label">System Logs</div>
        </div>
      </div>
      
      <% if (logStats.newestFile) { %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <p class="mb-1 text-light">
            <i class="far fa-clock me-2"></i> Most recent log: 
            <strong class="text-primary"><%= logStats.newestFile.name %></strong>
            <span class="text-muted ms-2"><%= logStats.newestFile.age %></span>
          </p>
        </div>
        <div>
          <a href="<%= logStats.newestFile.path %>" class="btn-view btn-sm">
            <i class="fas fa-eye me-2"></i> View Latest Log
          </a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  
  <!-- Log files list -->
  <div class="log-card">
    <div class="log-header">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="log-title">System Logs</h3>
        <span class="log-count"><i class="fas fa-file-code"></i> <%= logFiles.length %> Log Files</span>
      </div>
    </div>
    <div class="log-body">
      <% if (logFiles.length === 0) { %>
        <div class="log-empty">
          <i class="fas fa-file-alt fa-pulse"></i>
          <p>No system logs are available at this time</p>
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="log-table">
            <thead>
              <tr>
                <th>Log File</th>
                <th>Type</th>
                <th>Size</th>
                <th>Last Updated</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% logFiles.forEach(file => { %>
                <tr>
                  <td>
                    <div class="log-file-name">
                      <i class="fas fa-<%= file.icon %> me-2"></i>
                      <%= file.name %>
                    </div>
                  </td>
                  <td>
                    <% 
                      let typeClass = '';
                      if (file.name.toLowerCase().includes('error')) {
                        typeClass = 'log-type-error';
                      } else if (file.name.toLowerCase().includes('system')) {
                        typeClass = 'log-type-system';
                      } else if (file.name.toLowerCase().includes('command')) {
                        typeClass = 'log-type-command';
                      } else {
                        typeClass = 'log-type-general';
                      }
                    %>
                    <span class="log-type <%= typeClass %>"><%= file.type %></span>
                  </td>
                  <td><span class="log-size"><%= formatFileSize(file.size) %></span></td>
                  <td>
                    <span class="log-date">
                      <i class="far fa-clock me-1"></i>
                      <%= file.age %>
                    </span>
                  </td>
                  <td>
                    <div class="log-actions">
                      <a href="<%= file.path %>" class="btn-view">
                        <i class="fas fa-eye me-2"></i> View
                      </a>
                      <a href="<%= file.path %>?download=true" class="btn-download">
                        <i class="fas fa-download me-2"></i> Download
                      </a>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>
