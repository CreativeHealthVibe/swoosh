<%- include('../partials/admin-header') %>

<div class="welcome-container">
  <div class="welcome-card">
    <div class="welcome-avatar">
      <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=128" alt="<%= user.username %>'s Avatar">
      <% } else { %>
        <div class="avatar-placeholder"><%= user.username.charAt(0).toUpperCase() %></div>
      <% } %>
    </div>
    
    <div class="welcome-message">
      <h1 class="gradient-text"><%= greeting %> @<%= user.username %></h1>
      <p>Welcome to the SWOOSH Bot admin panel.</p>
      <p>You now have access to administrative controls for the bot.</p>
    </div>
    
    <div class="welcome-actions">
      <a href="/admin/dashboard" class="gradient-button">
        <i class="fas fa-tachometer-alt"></i> Dashboard
      </a>
      <a href="/admin/blacklist" class="btn btn-secondary">
        <i class="fas fa-ban"></i> Manage Blacklist
      </a>
      <a href="/admin/settings" class="btn btn-secondary">
        <i class="fas fa-cog"></i> Bot Settings
      </a>
      <a href="/admin/logs" class="btn btn-secondary">
        <i class="fas fa-list"></i> View Logs
      </a>
    </div>
  </div>
</div>

<style>
  .welcome-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 200px);
    padding: 2rem;
    background: var(--background);
  }
  
  .welcome-card {
    background: var(--card-bg);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: var(--border-radius);
    border: 1px solid rgba(156, 77, 255, 0.2);
    box-shadow: var(--card-shadow);
    width: 100%;
    max-width: 800px;
    padding: 3rem;
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .welcome-card:hover {
    transform: translateY(-5px);
  }
  
  .welcome-avatar {
    margin-bottom: 2rem;
  }
  
  .welcome-avatar img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid var(--primary-color);
    box-shadow: 0 5px 15px rgba(156, 77, 255, 0.3);
  }
  
  .avatar-placeholder {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: var(--primary-color);
    color: white;
    font-size: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }
  
  .welcome-message h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }
  
  .gradient-text {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
  }
  
  .welcome-message p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }
  
  .welcome-actions {
    margin-top: 2.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .btn-primary {
    background-color: var(--primary-color);
    color: white;
  }
  
  .btn-primary:hover {
    background-color: var(--primary-hover);
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(156, 77, 255, 0.3);
  }
  
  .btn-secondary {
    background-color: rgba(156, 77, 255, 0.15);
    color: var(--primary-color);
    border: 1px solid var(--primary-color);
  }
  
  .btn-secondary:hover {
    background-color: rgba(156, 77, 255, 0.25);
    transform: translateY(-3px);
  }
  
  .gradient-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    outline: none;
    text-align: center;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
    color: #fff;
    position: relative;
    overflow: hidden;
    z-index: 1;
    text-decoration: none;
  }
  
  .gradient-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--primary-light), var(--primary-color));
    z-index: -1;
    transition: opacity 0.3s ease;
    opacity: 0;
  }
  
  .gradient-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(156, 77, 255, 0.3);
    color: #fff;
  }
  
  .gradient-button:hover::before {
    opacity: 1;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .welcome-card {
      padding: 2rem 1.5rem;
    }
    
    .welcome-message h1 {
      font-size: 2rem;
    }
    
    .welcome-actions {
      flex-direction: column;
    }
    
    .btn, .gradient-button {
      width: 100%;
    }
  }
</style>

<%- include('../partials/admin-footer') %>
