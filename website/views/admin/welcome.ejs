<%- include('../partials/admin-header') %>

<div class="welcome-container">
  <div class="welcome-card">
    <div class="welcome-avatar">
      <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=128" alt="<%= user.username %>'s Avatar">
      <% } else { %>
        <div class="avatar-placeholder"><%= user.username.charAt(0).toUpperCase() %></div>
      <% } %>
    </div>
    
    <div class="welcome-message">
      <h1><%= greeting %></h1>
      <p>Welcome to the SWOOSH Bot admin panel.</p>
      <p>You now have access to administrative controls for the bot.</p>
    </div>
    
    <div class="welcome-actions">
      <a href="/admin/dashboard" class="btn btn-primary">
        <i class="fas fa-tachometer-alt"></i> Dashboard
      </a>
      <a href="/admin/blacklist" class="btn btn-secondary">
        <i class="fas fa-ban"></i> Manage Blacklist
      </a>
      <a href="/admin/settings" class="btn btn-secondary">
        <i class="fas fa-cog"></i> Bot Settings
      </a>
      <a href="/admin/logs" class="btn btn-secondary">
        <i class="fas fa-list"></i> View Logs
      </a>
    </div>
  </div>
</div>

<style>
  .welcome-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 200px);
    padding: 2rem;
  }
  
  .welcome-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 800px;
    padding: 3rem;
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .welcome-card:hover {
    transform: translateY(-5px);
  }
  
  .welcome-avatar {
    margin-bottom: 2rem;
  }
  
  .welcome-avatar img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid #7289da;
    box-shadow: 0 5px 15px rgba(114, 137, 218, 0.3);
  }
  
  .avatar-placeholder {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: #7289da;
    color: white;
    font-size: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }
  
  .welcome-message h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #2f3136;
    font-weight: 700;
  }
  
  .welcome-message p {
    font-size: 1.2rem;
    color: #4f5660;
    margin-bottom: 0.5rem;
  }
  
  .welcome-actions {
    margin-top: 2.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .btn-primary {
    background-color: #7289da;
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #5e77d4;
  }
  
  .btn-secondary {
    background-color: #f6f6f7;
    color: #4f5660;
  }
  
  .btn-secondary:hover {
    background-color: #e3e5e8;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .welcome-card {
      padding: 2rem 1.5rem;
    }
    
    .welcome-message h1 {
      font-size: 2rem;
    }
    
    .welcome-actions {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
    }
  }
</style>

<%- include('../partials/admin-footer') %>
