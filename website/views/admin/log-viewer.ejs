<style>
  /* Log viewer specific styles */
  .log-viewer-container {
    padding: 1.5rem;
  }
  
  .log-card {
    background: rgba(30, 15, 50, 0.5);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    border: 1px solid rgba(156, 77, 255, 0.3);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.36);
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .log-header {
    background: linear-gradient(135deg, rgba(156, 77, 255, 0.3), rgba(0, 229, 255, 0.2));
    padding: 1.25rem;
    border-bottom: 1px solid rgba(156, 77, 255, 0.2);
    position: relative;
    overflow: hidden;
  }
  
  .log-header::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(156, 77, 255, 0.1) 0%, transparent 70%);
    animation: pulse 10s infinite linear;
    z-index: 0;
  }
  
  @keyframes pulse {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .log-title {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(to right, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0;
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
  }
  
  .log-title i {
    margin-right: 0.75rem;
  }
  
  .log-actions {
    display: flex;
    gap: 0.5rem;
    position: relative;
    z-index: 1;
  }
  
  .log-btn {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid rgba(156, 77, 255, 0.5);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
  }
  
  .log-btn i {
    margin-right: 0.5rem;
  }
  
  .log-btn:hover {
    background: rgba(156, 77, 255, 0.1);
    border-color: var(--primary-color);
    transform: translateY(-2px);
  }
  
  .log-btn-primary {
    background: linear-gradient(135deg, var(--primary-color), #8040cc);
    color: white;
    border: none;
    box-shadow: 0 4px 15px rgba(156, 77, 255, 0.3);
  }
  
  .log-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(156, 77, 255, 0.5);
    background: linear-gradient(135deg, #a85aff, var(--primary-color));
  }
  
  .log-content {
    max-height: 70vh;
    overflow-y: auto;
  }
  
  .log-content::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  .log-content::-webkit-scrollbar-track {
    background: rgba(30, 15, 50, 0.3);
  }
  
  .log-content::-webkit-scrollbar-thumb {
    background: rgba(156, 77, 255, 0.5);
    border-radius: 4px;
  }
  
  .log-content::-webkit-scrollbar-thumb:hover {
    background: rgba(156, 77, 255, 0.7);
  }
  
  .log-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    color: var(--text-secondary);
  }
  
  .log-empty i {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.7;
    color: var(--primary-light);
  }
  
  .log-table {
    width: 100%;
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
    table-layout: fixed;
  }
  
  .log-table tr {
    border-bottom: 1px solid rgba(156, 77, 255, 0.1);
    transition: all 0.2s ease;
  }
  
  .log-table tr:hover {
    background: rgba(156, 77, 255, 0.05);
  }
  
  .log-table td {
    padding: 0.5rem 0.75rem;
    vertical-align: top;
    word-break: break-word;
  }
  
  .log-number {
    width: 50px;
    color: rgba(255, 255, 255, 0.3);
    text-align: right;
    user-select: none;
    border-right: 1px solid rgba(156, 77, 255, 0.1);
  }
  
  .log-timestamp {
    width: 180px;
    color: var(--accent-color);
  }
  
  .log-level {
    width: 80px;
    font-weight: bold;
    text-align: center;
  }
  
  .log-error {
    color: #ff5050;
  }
  
  .log-warn {
    color: #ffab40;
  }
  
  .log-info {
    color: #29b6f6;
  }
  
  .log-debug {
    color: #9e9e9e;
  }
  
  .log-entry {
    color: var(--text-secondary);
  }
  
  .timestamp-badge {
    position: absolute;
    bottom: 10px;
    right: 10px;
    font-size: 0.8rem;
    color: var(--text-secondary);
    background: rgba(30, 15, 50, 0.7);
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    z-index: 2;
  }
  
  @media (max-width: 768px) {
    .log-actions {
      margin-top: 1rem;
    }
    
    .log-timestamp {
      width: 150px;
    }
  }
</style>

<div class="log-viewer-container">
  <div class="log-card">
    <div class="log-header">
      <div class="d-flex justify-content-between align-items-center flex-wrap">
        <h2 class="log-title">
          <% 
            let logIcon = 'file-code';
            if (filename.toLowerCase().includes('error')) {
              logIcon = 'exclamation-triangle';
            } else if (filename.toLowerCase().includes('debug')) {
              logIcon = 'bug';
            } else if (filename.toLowerCase().includes('system')) {
              logIcon = 'server';
            } else if (filename.toLowerCase().includes('command')) {
              logIcon = 'terminal';
            }
          %>
          <i class="fas fa-<%= logIcon %>"></i>
          <%= filename %>
        </h2>
        <div class="log-actions">
          <a href="/admin/logs/<%= filename %>?download=true" class="log-btn log-btn-primary">
            <i class="fas fa-download"></i> Download
          </a>
          <a href="/admin/logs" class="log-btn">
            <i class="fas fa-arrow-left"></i> Back to Logs
          </a>
        </div>
      </div>
    </div>
    
    <div class="log-content">
      <% if (logContent.length === 0) { %>
        <div class="log-empty">
          <i class="fas fa-file-alt fa-pulse"></i>
          <p>This log file is empty.</p>
        </div>
      <% } else { %>
        <table class="log-table">
          <tbody>
            <% logContent.forEach((entry, index) => { %>
              <% if (entry.raw) { %>
                <tr>
                  <td class="log-number"><%= index + 1 %></td>
                  <td class="log-entry" colspan="3"><%= entry.raw %></td>
                </tr>
              <% } else { %>
                <tr class="<%= entry.levelClass %>-row">
                  <td class="log-number"><%= index + 1 %></td>
                  <td class="log-timestamp"><%= entry.timestamp %></td>
                  <td class="log-level <%= entry.levelClass %>"><%= entry.level %></td>
                  <td class="log-message"><%= entry.message %></td>
                </tr>
              <% } %>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </div>
    
    <div class="timestamp-badge">
      <i class="far fa-calendar-alt me-1"></i> Updated: <%= new Date().toLocaleString() %>
    </div>
  </div>
</div>
