<%- include('../partials/header') %>

<div class="container-fluid admin-dashboard">
  <div class="row">
    <!-- Sidebar -->
    <%- include('./partials/sidebar', { activeNav: 'admin-logs' }) %>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-clipboard-list"></i> Log Files</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary" id="refreshLogs">
              <i class="fas fa-sync-alt"></i> Refresh
            </button>
            <a href="/api/logs/download-all" class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-download"></i> Download All
            </a>
          </div>
        </div>
      </div>

      <!-- Log Files Table -->
      <div class="card">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h5 class="mb-0">Available Log Files</h5>
            </div>
            <div class="col-auto">
              <input type="text" id="searchLogs" class="form-control form-control-sm" placeholder="Search logs...">
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
              <thead class="table-dark">
                <tr>
                  <th>Filename</th>
                  <th>Size</th>
                  <th>Created</th>
                  <th>Last Modified</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="logsTableBody">
                <% if (logFiles && logFiles.length > 0) { %>
                  <% logFiles.forEach(file => { %>
                    <tr>
                      <td><%= file.name %></td>
                      <td><%= file.size %></td>
                      <td><%= file.created.toLocaleString() %></td>
                      <td><%= file.modified.toLocaleString() %></td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/admin/logs/view/<%= file.name %>" class="btn btn-info">
                            <i class="fas fa-eye"></i> View
                          </a>
                          <a href="/api/logs/download/<%= file.name %>" class="btn btn-secondary">
                            <i class="fas fa-download"></i> Download
                          </a>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="5" class="text-center">No log files available.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer">
          <small class="text-muted">Total log files: <%= logFiles ? logFiles.length : 0 %></small>
        </div>
      </div>

      <!-- Information Panel -->
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-info-circle"></i> About Logs</h5>
        </div>
        <div class="card-body">
          <p>Logs are automatically generated by the bot to record various events and actions. They are useful for troubleshooting issues and monitoring bot activity.</p>
          <p>The following log files are available:</p>
          <ul>
            <li><strong>bot.log</strong> - General bot activities and events</li>
            <li><strong>actions.log</strong> - Moderation actions and commands</li>
            <li><strong>error.log</strong> - Errors and exceptions (if present)</li>
          </ul>
          <p><strong>Note:</strong> Log files are rotated automatically to prevent them from becoming too large. Older logs may be deleted after a certain period.</p>
        </div>
      </div>
    </main>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Refresh logs
    document.getElementById('refreshLogs').addEventListener('click', function() {
      location.reload();
    });
    
    // Search functionality
    document.getElementById('searchLogs').addEventListener('input', function() {
      const searchValue = this.value.toLowerCase();
      
      document.querySelectorAll('#logsTableBody tr').forEach(row => {
        let matchFound = false;
        
        // Skip the "no logs" row
        if (row.cells.length === 1 && row.cells[0].colSpan === 5) {
          return;
        }
        
        // Search in filename
        if (row.cells[0].textContent.toLowerCase().includes(searchValue)) {
          matchFound = true;
        }
        
        row.style.display = matchFound ? '' : 'none';
      });
    });
  });
</script>

<%- include('../partials/footer') %>
