<div class="blacklist-container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Add to Blacklist</h5>
        </div>
        <div class="card-body">
          <form action="/admin/blacklist/add" method="POST">
            <div class="mb-3">
              <label for="userId" class="form-label">User ID</label>
              <input type="text" class="form-control" id="userId" name="userId" placeholder="Discord User ID" required>
              <small class="form-text text-muted">Right-click on user > Copy ID</small>
            </div>
            
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" placeholder="Discord Username" required>
            </div>
            
            <div class="mb-3">
              <label for="reason" class="form-label">Reason</label>
              <textarea class="form-control" id="reason" name="reason" rows="3" placeholder="Reason for blacklisting" required></textarea>
            </div>
            
            <button type="submit" class="btn btn-danger w-100">
              <i class="fas fa-ban me-2"></i> Add to Blacklist
            </button>
          </form>
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Blacklisted Users</h5>
            <span class="badge bg-danger"><%= blacklistedUsers.length %> Users</span>
          </div>
        </div>
        <div class="card-body">
          <% if (blacklistedUsers.length === 0) { %>
            <div class="empty-state">
              <i class="fas fa-ban"></i>
              <p>No users are currently blacklisted.</p>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Reason</th>
                    <th>Added By</th>
                    <th>Added On</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% blacklistedUsers.forEach(user => { %>
                    <tr>
                      <td><code><%= user.userId %></code></td>
                      <td><%= user.username %></td>
                      <td><%= user.reason %></td>
                      <td><%= user.moderatorTag %></td>
                      <td><%= new Date(user.timestamp).toLocaleString() %></td>
                      <td>
                        <form action="/admin/blacklist/remove" method="POST" class="d-inline">
                          <input type="hidden" name="userId" value="<%= user.userId %>">
                          <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-times"></i> Remove
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
