<%- include('../partials/admin-header-fixed') %>

<div class="welcome-container">
  <div class="welcome-card">
    <div class="welcome-avatar">
      <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=128" alt="<%= user.username %>'s Avatar">
      <% } else { %>
        <div class="avatar-placeholder"><%= user.username.charAt(0).toUpperCase() %></div>
      <% } %>
    </div>
    
    <div class="welcome-message">
      <h1 class="gradient-text"><%= greeting %> @<%= user.username %></h1>
      <p>Welcome to the SWOOSH Bot admin panel.</p>
      <p>You now have access to administrative controls for the bot.</p>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="stats-container">
    <div class="stats-row">
      <div class="stats-card">
        <div class="stats-icon">
          <i class="fas fa-server"></i>
        </div>
        <div class="stats-info">
          <h3>Server Count</h3>
          <p id="server-count">--</p>
        </div>
      </div>

      <div class="stats-card">
        <div class="stats-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stats-info">
          <h3>User Count</h3>
          <p id="user-count">--</p>
        </div>
      </div>

      <div class="stats-card">
        <div class="stats-icon">
          <i class="fas fa-ticket-alt"></i>
        </div>
        <div class="stats-info">
          <h3>Tickets</h3>
          <p id="ticket-count">--</p>
        </div>
      </div>

      <div class="stats-card">
        <div class="stats-icon">
          <i class="fas fa-clock"></i>
        </div>
        <div class="stats-info">
          <h3>Uptime</h3>
          <p id="uptime">--</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Activity Log and Commands -->
  <div class="dashboard-row">
    <div class="activity-log">
      <div class="card-header">
        <h3><i class="fas fa-history"></i> Recent Activity</h3>
      </div>
      <div class="card-content">
        <ul id="activity-log-list">
          <li class="placeholder-item">Loading activity logs...</li>
        </ul>
      </div>
    </div>

    <div class="command-usage">
      <div class="card-header">
        <h3><i class="fas fa-terminal"></i> Command Usage</h3>
      </div>
      <div class="card-content">
        <div id="command-usage-chart">
          <p class="placeholder-text">Loading command statistics...</p>
        </div>
      </div>
    </div>
  </div>

  <div class="welcome-actions">
    <a href="/admin/blacklist" class="btn btn-secondary">
      <i class="fas fa-ban"></i> Manage Blacklist
    </a>
    <a href="/admin/settings" class="btn btn-secondary">
      <i class="fas fa-cog"></i> Bot Settings
    </a>
    <a href="/admin/logs" class="btn btn-secondary">
      <i class="fas fa-list"></i> View Logs
    </a>
  </div>
</div>

<style>
  :root {
    --primary-color: #9c4dff;
    --primary-light: #bf7fff;
    --primary-hover: #8a43e0;
    --secondary-color: #2a2d3e;
    --background: #1a1c2e;
    --card-bg: rgba(42, 45, 62, 0.7);
    --text-primary: #ffffff;
    --text-secondary: #b3b9d1;
    --border-radius: 12px;
    --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    --success-color: #28c76f;
    --warning-color: #ff9f43;
    --danger-color: #ea5455;
    --info-color: #00cfe8;
  }
  
  /* WebSocket Connection Status Styles */
  .ws-connecting {
    background-color: #666 !important;
  }
  
  .ws-connected {
    background-color: var(--success-color) !important;
  }
  
  .ws-disconnected {
    background-color: var(--danger-color) !important;
  }
  
  .ws-error {
    background-color: var(--warning-color) !important;
    color: #333 !important;
  }
  
  /* WebSocket Connection Status Styles */
  .ws-connecting {
    background-color: #666 !important;
  }
  
  .ws-connected {
    background-color: var(--success-color) !important;
  }
  
  .ws-disconnected {
    background-color: var(--danger-color) !important;
  }
  
  .ws-error {
    background-color: var(--warning-color) !important;
    color: #333 !important;
  }
  
  .welcome-container {
    padding: 2rem;
    background: var(--background);
  }
  
  .welcome-card {
    background: var(--card-bg);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: var(--border-radius);
    border: 1px solid rgba(156, 77, 255, 0.2);
    box-shadow: var(--card-shadow);
    width: 100%;
    padding: 2rem;
    text-align: center;
    transition: transform 0.3s ease;
    margin-bottom: 2rem;
  }
  
  .welcome-avatar {
    margin-bottom: 1.5rem;
  }
  
  .welcome-avatar img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid var(--primary-color);
    box-shadow: 0 5px 15px rgba(156, 77, 255, 0.3);
  }
  
  .avatar-placeholder {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: var(--primary-color);
    color: white;
    font-size: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }
  
  .welcome-message h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }
  
  .gradient-text {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
  }
  
  .welcome-message p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }
  
  /* Stats Cards */
  .stats-container {
    margin-bottom: 2rem;
  }
  
  .stats-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }
  
  .stats-card {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    border: 1px solid rgba(156, 77, 255, 0.2);
    padding: 1.5rem;
    display: flex;
    align-items: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .stats-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
  }
  
  .stats-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 1rem;
    flex-shrink: 0;
  }
  
  .stats-icon i {
    font-size: 1.5rem;
    color: white;
  }
  
  .stats-info h3 {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 0.3rem;
    font-weight: 500;
  }
  
  .stats-info p {
    font-size: 1.5rem;
    color: var(--text-primary);
    font-weight: 700;
    margin: 0;
  }
  
  /* Dashboard Row for Activity and Commands */
  .dashboard-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .activity-log, .command-usage {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    border: 1px solid rgba(156, 77, 255, 0.2);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .activity-log:hover, .command-usage:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
  }
  
  .card-header {
    background: rgba(156, 77, 255, 0.15);
    padding: 1rem 1.5rem;
    border-bottom: 1px solid rgba(156, 77, 255, 0.2);
  }
  
  .card-header h3 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .card-content {
    padding: 1.5rem;
    max-height: 350px;
    overflow-y: auto;
  }
  
  /* Activity Log Styling */
  #activity-log-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .activity-item {
    display: flex;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(156, 77, 255, 0.1);
  }
  
  .activity-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }
  
  .activity-icon {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(156, 77, 255, 0.15);
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 1rem;
    flex-shrink: 0;
  }
  
  .activity-icon i {
    color: var(--primary-color);
  }
  
  .activity-content {
    flex-grow: 1;
  }
  
  .activity-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.3rem;
  }
  
  .activity-user {
    font-size: 0.9rem;
    color: var(--primary-light);
    margin-bottom: 0.3rem;
  }
  
  .activity-time {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
  
  /* Command Usage Chart */
  .command-bar {
    display: flex;
    margin-bottom: 1rem;
  }
  
  .command-name {
    width: 100px;
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-right: 1rem;
    padding-top: 0.2rem;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }
  
  .command-bar-container {
    flex-grow: 1;
    height: 30px;
    background: rgba(156, 77, 255, 0.1);
    border-radius: 6px;
    overflow: hidden;
    position: relative;
  }
  
  .command-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
    border-radius: 6px;
    min-width: 30px;
  }
  
  .command-count {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
  }
  
  /* Placeholder text */
  .placeholder-text, .placeholder-item {
    color: var(--text-secondary);
    text-align: center;
    padding: 1rem;
    border-radius: var(--border-radius);
    background: rgba(156, 77, 255, 0.05);
  }
  
  /* Action Buttons */
  .welcome-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .btn-primary {
    background-color: var(--primary-color);
    color: white;
  }
  
  .btn-primary:hover {
    background-color: var(--primary-hover);
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(156, 77, 255, 0.3);
  }
  
  .btn-secondary {
    background-color: rgba(156, 77, 255, 0.15);
    color: var(--primary-color);
    border: 1px solid var(--primary-color);
  }
  
  .btn-secondary:hover {
    background-color: rgba(156, 77, 255, 0.25);
    transform: translateY(-3px);
  }
  
  /* Responsive Adjustments */
  @media (max-width: 1100px) {
    .stats-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .dashboard-row {
      grid-template-columns: 1fr;
    }
    
    .welcome-card {
      padding: 1.5rem;
    }
    
    .stats-row {
      grid-template-columns: 1fr;
    }
    
    .welcome-actions {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
    }
  }
</style>

